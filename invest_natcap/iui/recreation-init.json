{
    "id" : "window",
    "label": "Recreation Model - Initial Run",
    "targetScript" : "invest_natcap.recreation.recreation_init",
    "modelName" : "recreation_init",
    "localDocURI": "",
    "height": 600,
    "width" : 700,
    "elements": [
            {
            "id" : "workspace_list",
            "type": "list",	        
		    "elements": [
                                {
                                    "id" : "aoiFileName",
                                    "args_id" : "aoiFileName",
                                    "type": "file",
                                    "label": "Area of Interest",
                                    "defaultValue": "",
                                    "validateAs": {"type": "OGR"},
                                    "required": true
                                },
                                {
                                    "id": "gridType",
                                    "args_id" : "gridType",
                                    "type": "dropdown",
                                    "label": "Grid type",
                                    "options":["rectangular", "hexagonal"],
                                    "returns": {"mapValues" : {"rectangular" : 0, "hexagonal" : 1}},
                                    "defaultValue": 0,
                                    "required": true
                                },
                                {
                                    "id" : "cellSize",
                                    "args_id" : "cellSize",
                                    "type": "text",
                                    "label": "Cell size",
                                    "defaultValue": "1",
                                    "validText": "[0-9]+(\\.[0-9][0-9])?",
                                    "dataType": "float",
                                    "required": true
                                },
                                {
                                    "id": "cellUnit",
                                    "args_id" : "cellUnit",
                                    "type": "dropdown",
                                    "label": "Cell unit",
                                    "options":["kilometer", "meter", "mile", "foot"],
                                    "returns": {"mapValues" : {"kilometer" : 1000, "meter" : 1, "mile":1609.344, "foot" : 0.3048}},
                                    "defaultValue": 0,
                                    "required": true
                                },
                                {
                                    "id" : "workspace_dir",
                                    "args_id" : "workspace_dir",
                                    "type": "folder",
                                    "label": "Workspace",
                                    "required": true
                                },
                                {
                                    "id" : "comments",
                                    "args_id" : "comments",
                                    "type": "text",
                                    "label": "Comments",
                                    "required": false
                                },
                                {
                                    "id" : "data_dir",
                                    "args_id" : "data_dir",
                                    "type": "folder",
                                    "label": "Data Directory",
                                    "required": false
                                },
				{
				    "id" : "landscan",
				    "args_id" : "landscan",
				    "type": "checkbox",
				    "label": "2010 Population",
				    "defaultValue": true,
				    "required": false
				},		        		        		        
				{
				    "id" : "osm_point",
				    "args_id" : "osm_point",
				    "type": "checkbox",
				    "label": "OSM Points",
				    "defaultValue": true,
				    "required": false
				},
				{
				    "id" : "osm_line",
				    "args_id" : "osm_line",
				    "type": "checkbox",
				    "label": "OSM Lines",
				    "defaultValue": true,
				    "required": false
				},
				{
				    "id" : "osm_poly",
				    "args_id" : "osm_poly",
				    "type": "checkbox",
				    "label": "OSM Polygons",
				    "defaultValue": true,
				    "required": false
				},
				{
				    "id" : "protected",
				    "args_id" : "protected",
				    "type": "checkbox",
				    "label": "Protected Areas",
				    "defaultValue": true,
				    "required": false
				},
				{
				    "id" : "lulc",
				    "args_id" : "lulc",
				    "type": "checkbox",
				    "label": "LULC",
				    "defaultValue": true,
				    "required": false
				},				
				{
				    "id" : "mangroves",
				    "args_id" : "mangroves",
				    "type": "checkbox",
				    "label": "Mangroves",
				    "defaultValue": true,
				    "required": false
				},
				{
				    "id" : "reefs",
				    "args_id" : "reefs",
				    "type": "checkbox",
				    "label": "Coral Reefs",
				    "defaultValue": true,
				    "required": false
				},
				{
				    "id" : "grass",
				    "args_id" : "grass",
				    "type": "checkbox",
				    "label": "Seagrasses",
				    "defaultValue": true,
				    "required": false
				}				
		   ]
		   }
    ]
}
                
