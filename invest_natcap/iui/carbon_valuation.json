{
    "id": "window",
    "label": "Valuation of Carbon Sequestration",
    "targetScript": "invest_natcap.carbon.carbon_valuation",
    "modelName": "carbon_valuation",
    "localDocURI": "../documentation/carbonstorage.html",
    "height": 400,
    "width": 700,
    "elements": [
        {
            "id": "valuation_list",
            "type": "list",
            "elements": [
                {   "id": "workspace_dir",
                    "type": "folder",
                    "label": "Workspace",
                    "required": true,
                    "args_id": "workspace_dir",
                    "defaultValue": "../Carbon/",
		    "helpText": "The folder that will contain the intermediate and ouput files related to carbon valuation."
                },
                {
                    "id":"sequest_uri",
                    "type": "file",
                    "label": "Carbon sequestration raster",
                    "required": true,
                    "args_id": "sequest_uri",
                    "defaultValue": "../Carbon/Output/sequest.tif",
                  "validateAs": {"type": "GDAL"},
		  "helpText": "The per-pixel sequestered carbon either from a run of the InVEST Carbon Biophysical model, or from a user defined source."
                },
		{
		    "id": "carbon_price_units",
		    "args_id": "carbon_price_units",
		    "type": "dropdown",
		    "label": "Price in terms of metric tons of",
		    "options": ["Carbon (C)",
				"Carbon Dioxide (CO2)"],
		    "defaultValue": 0,
		    "required": true,
		    "helpText": "The units for the price per unit of carbon type."
		},
                {
                    "id": "value",
                    "args_id": "V",
                    "type": "text",
                    "width": 70,
                    "label": "Value of Carbon (USD/metric ton)",
                    "required": true,
                    "dataType": "float",
                    "validText": "[0-9]+(\\.[0-9][0-9])?",
                    "defaultValue": "43.00",
                    "validateAs": {"type": "number"},
		    "helpText": "The price per unit ton of carbon or C02 as defined in the carbon price units."
                },
                {
                    "id": "discount_rate",
                    "args_id": "r",
                    "type": "text",
                    "width": 70,
                    "label": "Market discount in price of Carbon (%)",
                    "required": true,
                    "dataType": "int",
                    "validText": "-?([0-9]+)?\\.[0-9]+",
                    "defaultValue": "7",
                    "validateAs": {"type": "number"},
		    "helpText": "The discount rate as an integer percent."
                },
                {
                    "id": "rate_change",
                    "args_id": "c",
                    "type": "text",
                    "width": 70,
                    "label": "Annual rate of change in price of Carbon (%)",
                    "required": true,
                    "dataType": "float",
                    "validText": "-?([0-9]+)?\\.[0-9]+",
                    "defaultValue": "0",
                    "validateAs": {"type": "number"},
		    "helpText": "The integer percent increase of the price of carbon per year."
                },
                {
                    "id": "yr_cur",
                    "args_id": "yr_cur",
                    "type": "text",
                    "width": 70,
                    "label": "Start year of sequestration measurement",
                    "required": true,
                    "dataType": "int",
                    "validText": "-?[0-9]+",
                    "defaultValue": "2000",
                    "validateAs": {"type": "number"},
		    "helpText": "The calendar year of the current scenario."
                },
                {
                    "id": "yr_fut",
                    "args_id": "yr_fut",
                    "type": "text",
                    "width": 70,
                    "label": "Final year of sequestration measurement",
                    "required": true,
                    "dataType": "int",
                    "validText": "-?[0-9]+",
                    "defaultValue": "2030",
                    "validateAs": {"type": "number"},
		    "helpText": "The calendar year of the future scenario."
                }
            ]
        }
    ]
}
