{
    "id": "window",
    "label": "Valuation of Carbon Sequestration",
    "targetScript": "invest_natcap.carbon.carbon_valuation",
    "modelName": "carbon_valuation",
    "localDocURI": "./documentation/carbonstorage.html",
    "height": 200,
    "width": 500,
    "elements": [
        {
            "id": "valuation_list",
            "type": "list",
            "elements": [
                {   "id": "workspace_dir",
                    "type": "folder",
                    "label": "Workspace",
                    "required": true,
                    "args_id": "workspace_dir",
                    "defaultValue": "./carbon/"
                },
                {
                    "id":"sequest_uri",
                    "type": "file",
                    "label": "Carbon sequestration raster",
                    "required": true,
                    "args_id": "sequest_uri",
                    "defaultValue": "./carbon/Output/sequest.tif",
                    "validateAs": {"type": "GDAL"}
                },
		{
		    "id": "carbon_price_units",
		    "args_id": "carbon_price_units",
		    "type": "dropdown",
		    "label": "Price in terms of metric tons of",
		    "options": ["Carbon (C)",
				"Carbon Dioxide (CO2)"],
		    "defaultValue": 0,
		    "required": true
		},
                {
                    "id": "value",
                    "args_id": "V",
                    "type": "text",
                    "width": 70,
                    "label": "Value of Carbon (USD/metric ton)",
                    "required": true,
                    "dataType": "float",
                    "validText": "[0-9]+(\\.[0-9][0-9])?",
                    "defaultValue": "43.00",
                    "validateAs": {"type": "number"}
                },
                {
                    "id": "discount_rate",
                    "args_id": "r",
                    "type": "text",
                    "width": 70,
                    "label": "Market discount in price of Carbon (%)",
                    "required": true,
                    "dataType": "int",
                    "validText": "-?([0-9]+)?\\.[0-9]+",
                    "defaultValue": "7",
                    "validateAs": {"type": "number"}
                },    
                {
                    "id": "rate_change",
                    "args_id": "c",
                    "type": "text",
                    "width": 70,
                    "label": "Annual rate of change in price of Carbon (%)",
                    "required": true,
                    "dataType": "float",
                    "validText": "-?([0-9]+)?\\.[0-9]+",
                    "defaultValue": "0",
                    "validateAs": {"type": "number"}
                },
                {
                    "id": "yr_cur",
                    "args_id": "yr_cur",
                    "type": "text",
                    "width": 70,
                    "label": "Start year of sequestration measurement",
                    "required": true,
                    "dataType": "int",
                    "validText": "-?[0-9]+",
                    "defaultValue": "2000",
                    "validateAs": {"type": "number"}
                },            
                {
                    "id": "yr_fut",
                    "args_id": "yr_fut",
                    "type": "text",
                    "width": 70,
                    "label": "Final year of sequestration measurement",
                    "required": true,
                    "dataType": "int",
                    "validText": "-?[0-9]+",
                    "defaultValue": "2030",
                    "validateAs": {"type": "number"}
                }
            ]
        }    
    ] 
}
