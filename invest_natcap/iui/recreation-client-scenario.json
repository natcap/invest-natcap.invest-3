{
    "id" : "window",
    "label": "Recreation Model - Scenario Run",
    "targetScript" : "invest_natcap.recreation.recreation_client",
    "modelName" : "recreation_client_scenario",
    "localDocURI": "../documentation/recreation.html",
    "height": 600,
    "width" : 700,
    "elements": [
            {
            "id" : "workspace_list",
            "type": "list",	        
		    "elements": [
			{		    
                            "id":"alpha_only",
                            "label": "This tool is in an ALPHA testing stage and should not be used for decision making",
			    "type": "label"
			},
                        {
                            "id" : "mode",
                            "args_id" : "mode",
                            "type": "hiddenElement",
                            "returns": "scenario",
                            "required": true                
                        },                        
                        
		        {
                            "id" : "workspace_dir",
                            "args_id" : "workspace_dir",
                            "type": "folder",
                            "label": "Workspace Directory",
                            "required": true,
                            "helpText": "Select a folder to be used as your workspace."                                                
		        },
                        {
                            "id" : "json",
                            "args_id" : "json",
                            "type": "file",
                            "label": "init.json",
                            "required": true,
                            "helpText": "The initial tool configuration file (init.json) from the initial run's results."
                        },					        
		        {
                            "id" : "data_dir",
                            "args_id" : "data_dir",
                            "type": "folder",
                            "label": "Data Directory",
                            "required": true,
                            "helpText": "A directory that contains all the new data for the scenario that you would like to include in the model run."
		        },
		        {
                            "id" : "comments",
                            "args_id" : "comments",
                            "type": "text",
                            "label": "Comments",
                            "required": false,
                            "helpText": "Any comments for yourself that you would like to have as part of the model run."                            
		        }
		   ]
		   }
    ]
}
                
