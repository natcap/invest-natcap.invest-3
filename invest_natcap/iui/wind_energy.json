{
    "id" : "window",
    "label": "Wind Energy",
    "targetScript" : "invest_natcap.wind_energy.wind_energy_uri_handler",
    "modelName" : "wind_energy",
    "localDocURI": "../documentation/wind_energy.html",
    "height": 900,
    "width" : 800,
    "elements": [
        {
            "id" : "workspace_list",
            "type": "list",
            "elements":[
                {
                    "id" : "workspace",
                    "args_id" : "workspace_dir",
                    "type": "folder",
                    "label": "Workspace",
                    "defaultValue": "../Wind_Energy",
                    "required": true,
                    "validateAs": {"type": "folder"},
                    "helpText": "Select a folder to be used as your workspace.  If the folder you select does not exist, it will be created for you.<br/><br/>This folder will contain the rasters produced by this model.  <b>If datasets already exist in this folder, they will be overwritten</b>."
                },
                {
                    "id" : "wind_data",
                    "args_id" : "wind_data_uri",
                    "type": "file",
                    "label": "Wind Data Points",
                    "defaultValue": "../Wind_Energy/input/ECNA_EEZ_WEBPAR_Aug27_2012.bin",
                    "required": true,
                    "helpText": "A binary file that represents the wind energy data points. Please see the users guide on how this file was generated."
                },
                {
                    "id" : "aoi",
                    "args_id" : "aoi_uri",
                    "type": "file",
                    "label": "Area Of Interest (AOI)",
                    "defaultValue": "../Wind_Energy/input/aoi.shp",
                    "required": false,
                    "requiredIf": ["valuation_container", "distance_container"],
                    "returns": {"ifEmpty": "pass"},
                    "validateAs": {"type": "OGR",
                                   "layers": [{"name": {"inheritFrom": "file"},
                                               "type": "polygons",
                                               "projection" : {"units": "meters", "exists": true}
                                             }]
                                  },
                    "helpText": "An optional polygon shapefile that defines the area of interest. The AOI must be projected with linear units equal to meters. If the AOI is provided it will clip and project the outputs to that of the AOI. The Distance inputs are dependent on the AOI and will only be accessible if the AOI is selected. If the AOI is selected and the Distance parameters are selected, then the AOI should also cover a portion of the land polygon to calculate distances correctly." 
                },
                {
                    "id" : "bathymetry",
                    "args_id" : "bathymetry_uri",
                    "type": "file",
                    "label": "Bathymetry (DEM)",
                    "defaultValue": "../Base_Data/Marine/DEMs/global_dem/hdr.adf",
                    "required": true,
                    "validateAs": {"type": "GDAL"},
                    "helpText": "A raster dataset for the eleveation values of the area of interest. The DEM should cover at least the entire span of the area of interest and if no AOI is provided then the default global DEM should be used."
                },
                {
                    "id" : "land_polygon",
                    "args_id" : "land_polygon_uri",
                    "type": "file",
                    "label": "Land Polygon to Calculate Distance From",
                    "defaultValue": "",
                    "required": false,
                    "enabledBy" : "aoi", 
                    "returns" : {"ifEmpty": "pass"},
                    "requiredIf": ["valuation_container", "distance_container"],
                    "validateAs": {"type": "OGR"},
                    "helpText": "An optional polygon shapefile that represents the land and coastline that is of interest. For this input to be selectable the AOI must be selected. The AOI should also cover a portion of this land polygon to properly calculate distances. This coastal polygon, and what is covered by the AOI, will be where the distances from shore to ocean are calculated from."
                },
                {
                    "id" : "days_harv_wind_energy",
                    "args_id" : "num_days",
                    "type": "text",
                    "label": "Number of Days for Harvested Wind Energy Calculation (days)",
                    "defaultValue": "365",
                    "validText" : "^[0-9]*\\.?[0-9]+$",
                    "validateAs" : {"type" : "number",
                                    "allowedValues" : {"pattern" : "^[0-9]*\\.?[0-9]+$"}},
                    "required": true,
                    "helpText": "An integer value for the number of days for harvested wind energy. 365 days corresponds to yearly calculations and it is suggested to use 30 days for monthly energy outputs."
                },
                {
                    "id" : "results_suffix",
                    "args_id" : "suffix",
                    "type": "text",
                    "dataType": "string",
                    "validText": "[a-zA-Z0-9]*",
                    "label": "Results Suffix (optional)",
                    "defaultValue": "",
                    "returns": {"ifEmpty": "pass"},
                    "required": false,
                    "helpText":"A String that will be added to the end of the output uris."

                }                         
            ]
        },
        {
            "id" : "turbine_group",
            "type" : "container",
            "label" : "Turbine Properties",
            "elements" :[ 
                {
                    "id" : "turbine_list",
                    "type" : "list",
                    "elements" : [
                            {
                                "id" : "turbine_parameters",
                                "args_id" : "turbine_parameters_uri",
                                "type": "file",
                                "label": "Turbine Type",
                                "required": true,
                                "helpText": "A CSV file that contains parameters corresponding to a specific turbine type. Please see the Users Guide for correctly selecting a turbine type. Also see the Users Guide for information pertaining to providing your own turbine type.",
                                "validateAs": { "type": "CSV"}
                            },
                            {
                                "id" : "hub_height",
                                "args_id" : "hub_height",
                                "type": "text",
                                "label": "Hub Height (meters)",
                                "defaultValue": "",
                                "validText" : "^[0-9]+[0]+$",
                                "validateAs" : {"type" : "number",
                                                "allowedValues" : {"pattern" : "^[0-9]+[0]+$"}},
                                "required": true,
                                "helpText": "An integer value for the hub height of the turbines, where the height is a multiple of ten. Ex: 40, 50, 60, ... , 110, 120. Please see the Users Guide for selecting a proper height in accordance to the turbine type selected above."
                            },
                            {
                                "id" : "min_depth",
                                "args_id" : "min_depth",
                                "type": "text",
                                "label": "Minimum Depth for Offshore Wind Farm Installation (m)",
                                "defaultValue": "20",
                                "validText" : "^[0-9]*\\.?[0-9]+$",
                                "validateAs" : {"type" : "number",
                                                "allowedValues" : {"pattern" : "^[0-9]*\\.?[0-9]+$"}},
                                "required": true,
                                "helpText": "A floating point value for the minimum depth of the offshore wind farm installation (m)."
                            },
                            {
                                "id" : "max_depth", 
                                "args_id" : "max_depth",
                                "type": "text",
                                "label": "Maximum Depth for Offshore Wind Farm Installation (m)",
                                "defaultValue": "50",
                                "validText" : "^[0-9]*\\.?[0-9]+$",
                                "validateAs" : {"type" : "number",
                                                "allowedValues" : {"pattern" : "^[0-9]*\\.?[0-9]+$"}},
                                "required": true,
                                "helpText": "A floating point value for the maximum depth of the offshore wind farm installation (m)."
                            }
                        ]
                    }
                ]
        },
        {
            "id" : "distance_container",
            "args_id" : "distance_container",
            "type" : "container",
            "label" : "Use Distances to Determine Wind Farm Locations",
            "collapsible" : true,
            "enabledBy": "aoi",
            "defaultValue" : false,
            "elements" : [
                {
                    "id" : "distance_list",
                    "type" : "list",
                    "elements" : [
                    {
                        "id" : "min_distance",
                        "args_id" : "min_distance",
                        "type" : "text",
                        "label" : "Minimum Distance (m)",
                        "defaultValue" : "1000",
                        "validText" : "^[0-9]*\\.?[0-9]+$",
                        "validateAs" : {"type" : "number",
                                        "allowedValues" : {"pattern" : "^[0-9]*\\.?[0-9]+$"}},
                        "required" : true,
                        "helpText" : "A floating point value in meters that represents the minimum distance from shore for offshore wind farm installation."
                    },
                    {
                        "id" : "max_distance",
                        "args_id" : "max_distance",
                        "type" : "text",
                        "label" : "Maximum Distance (m)",
                        "defaultValue" : "10000",
                        "validText" : "^[0-9]*\\.?[0-9]+$",
                        "validateAs" : {"type" : "number",
                                        "allowedValues" : {"pattern" : "^[0-9]*\\.?[0-9]+$"}},
                        "required" : true,
                        "helpText" : "A floating point value in meters that represents the maximum distance from shore for offshore wind farm installation."
                    }
                  ]
                }
            ]
        },
        {
            "id" : "valuation_container",
            "args_id" : "valuation_container",
            "type" : "container",
            "label" : "Valuation",
            "collapsible" : true,
            "defaultValue" : false,
            "enabledBy": "aoi", 
            "elements" : [
                {
                    "id" : "distance_list",
                    "type" : "list",
                    "elements" : [
                        {
                            "id": "foundation_cost",
                            "args_id": "foundation_cost",
                            "type": "text",
                            "label": "Cost of the Foundation Type",
                            "required": true,
                            "helpText": "A floating point number for the cost of the foundation type (in millions of dollars). Please see the Users Guide to properly select this value.",
                            "validateAs": { "type" : "number",
                                            "allowedValues" : {"pattern" : "^[0-9]*\\.?[0-9]+$"}}
                        },
                        {
                            "id" : "number_of_machines",
                            "args_id": "number_of_machines",
                            "type": "text",
                            "label": "Number Of Turbines",
                            "defaultValue": "30",
                            "required": true,
                            "validText": "[0-9]+",
                            "helpText" : "An integer value indicating the number of wind turbines in the wind farm."
                        },
                        {
                            "id" : "dollar_per_kWh",
                            "args_id" : "dollar_per_kWh",
                            "type": "text",
                            "label": "$ / kWh",
                            "defaultValue": "0.187",
                            "validText" : "^[0-9]*\\.?[0-9]+$",
                            "validateAs" : {"type" : "number",
                                            "allowedValues" : {"pattern" : "^[0-9]*\\.?[0-9]+$"}},
                            "required": true,
                            "helpText": "The price of energy per kilowatt hour. Please consult the Users Guide for determining this value." 
                        },
                        {        
                            "id" : "grid_points",
                            "args_id" : "grid_points_uri",
                            "type": "file",
                            "label": "Grid Points",
                            "defaultValue": "",
                            "required": false,
                            "returns": {"ifEmpty": "pass"},
                            "helpText": "An optional CSV file with grid and land points to determine cable distances from. Each point location is represented as a single row with columns being ID, TYPE, LATI, and LONG. The LATI and LONG columns indicate the coordinates for the point. The TYPE column relates to whether it is a land or grid point. The ID column is a simple unique integer. The shortest distance between respective points is used for calculations. Please see the Users Guide for more information.",
                            "validateAs": { "type": "CSV",
                                            "fieldsExist": ["ID", "TYPE", "LATI", "LONG"],
                                            "restrictions": [{"field": "ID",
                                                            "validateAs": {"type": "number",
                                                                           "allowedValues": {"pattern":"^[0-9]+"}}},
                                                            {"field": "TYPE",
                                                            "validateAs": {"type": "string",
                                                            "allowedValues":{"pattern":"LAND|GRID", "flag":"ignoreCase"}}},
                                                            {"field": "LATI",
                                                            "validateAs": {"type": "number",
                                                            "allowedValues":{"pattern":"[-+]?[0-9]*\\.?[0-9]+$"}}},
                                                            {"field": "LONG",
                                                            "validateAs": {"type": "number",
                                                            "allowedValues":{"pattern":"[-+]?[0-9]*\\.?[0-9]+$"}}}
                                                ]}                                    
                                            
                        },
                        {
                            "id" : "avg_grid_dist",
                            "args_id" : "avg_grid_distance",
                            "type": "text",
                            "label": "Average Grid to Land Distance (km)",
                            "defaultValue": "",
                            "validText" : "^[0-9]*\\.?[0-9]+$",
                            "validateAs" : {"type" : "number",
                                            "allowedValues" : {"pattern" : "^[0-9]*\\.?[0-9]+$"}},
                            "required": false,
                            "requiredIf": ["grid_points"],
                            "helpText": "An optional number that is only required if grid points is NOT used in valuation. When running valuation using the land polygon to compute distances, an average distance is needed for connecting landing points to grid points.  See the Users Guide for helpful hints on selecting a good average distance."
                        }
                    ]
                }
            ]
        }
    ]
}
