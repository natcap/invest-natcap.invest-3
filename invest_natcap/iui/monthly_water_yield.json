{
    "id" : "window",
    "label": "Monthly Water Yield",
    "targetScript" : "invest_natcap.monthly_water_yield.monthly_water_yield",
    "modelName" : "monthly_water_yield",
    "localDocURI": "../documentation/monthlywateryield.html",
    "height": 500,
    "width" : 700,
    "elements": [
        {
            "id" : "workspace_list",
            "type": "list",
            "elements":[
                {
                    "id" : "workspace",
                    "args_id" : "workspace_dir",
                    "type": "folder",
                    "label": "Workspace",
                    "defaultValue": "",
                    "required": true
                },          
		        {
                    "id" : "time_step_data",
                    "args_id": "time_step_data_uri",
                    "type": "file",
                    "label": "Monthly Time Step Data",
                    "defaultValue": "",
                    "required": true,
                    "validateAs": {"type": "CSV"}
                },
                {        
                    "id" : "soil_max",
                    "args_id" : "soil_max_uri",
                    "type": "file",
                    "label": "Soil Max",
                    "defaultValue": "",
                    "required": true,
                    "validateAs": {"type": "GDAL"}
                },
                {        
                    "id" : "pawc",
                    "args_id" : "pawc_uri",
                    "type": "file",
                    "label": "Plant Available Water Content (PAWC)",
                    "defaultValue": "",
                    "required": true,
                    "validateAs": {"type": "GDAL"}
                },
                {        
                    "id" : "land_use",
                    "args_id" : "lulc_uri",
                    "type": "file",
                    "label": "Land Use",
                    "defaultValue": "",
                    "required": false,
                    "validateAs": {"type": "GDAL"}
                },    
                {        
                    "id" : "dem",
                    "args_id" : "dem_uri",
                    "type": "file",
                    "label": "DEM",
                    "defaultValue": "",
                    "required": false,
                    "validateAs": {"type": "GDAL"}
                },    
                {
                    "id" : "watersheds",
                    "args_id": "watersheds_uri",
                    "type": "file",
                    "label": "Watersheds",
                    "defaultValue": "",
                    "required": false,
                    "validateAs": {"type": "OGR"}
                 },
                 {
                    "id" : "subwatersheds",
                    "args_id": "sub_watersheds_uri",
                    "type": "file",
                    "label": "Sub Watersheds",
                    "defaultValue": "",
                    "required": false,
                    "validateAs": {"type": "OGR"}
                 },
                 {        
                    "id" : "results_suffix",
                    "args_id" : "results_suffix",
                    "type": "text",
                    "dataType": "string",
                    "validText": "[a-zA-Z0-9]*",
                    "label": "Results Suffix (optional)",
                    "defaultValue": "",
                    "required": false
                }     
                
            ]
        }
    ]
}
