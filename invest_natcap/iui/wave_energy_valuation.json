{
    "id" : "window",
    "label": "Wave Energy Valuation",
    "targetScript" : "./python/invest_core/wave_energy_valuation.py",
    "modelName" : "wave_energy_valuation",
    "localDocURI": "./documentation/wave_energy.html",
    "height": 600,
    "width" : 700,
    "elements": [
        {
            "id" : "workspace_list",
            "type": "list",
            "elements":[
                {
                    "id" : "workspace",
                    "args_id" : "workspace_dir",
                    "type": "folder",
                    "label": "Workspace",
                    "defaultValue": "./WaveEnergy",
                    "required": true
                },          
				{        
                    "id" : "land_grid_points",
                    "args_id" : "land_gridPts_uri",
                    "type": "file",
                    "label": "Path to Folder with Wave Base Data",
                    "defaultValue": "./WaveEnergy/Input/LandGridPts_WCVI.csv",
                    "required": true
                },    
		        {
		            "id": "machine_econ_table",
		            "args_id": "machine_econ_uri",
		            "type": "file",
		            "label": "Machine Economic Table",
		            "defaultValue": "./WaveEnergy/Input/MachineEconomicTable.csv",
		            "required": true
		        },
                {
                    "id" : "dem",
                    "args_id": "global_dem",
                    "type": "folder",
                    "label": "Global Digital Elevation Model (DEM)",
                    "defaultValue": "./Base_Data/Marine/DEMs/global_dem",
                    "required": true
                },
                {
                    "id" : "wave_data",
                    "args_id": "wave_data_shape_path",
                    "type": "file",
                    "label": "Wave Data Shapefile",
                    "defaultValue": "./WaveEnergy/Intermediate/WaveData_clipZ.shp",
                    "required": true
                }
            ]
        }
    ]
}
