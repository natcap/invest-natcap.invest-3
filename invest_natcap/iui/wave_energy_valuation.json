{
    "id" : "window",
    "label": "Wave Energy Valuation",
    "targetScript" : "../wave_energy/wave_energy_valuation.py",
    "modelName" : "wave_energy_valuation",
    "localDocURI": "./documentation/wave_energy.html",
    "height": 600,
    "width" : 700,
    "elements": [
        {
            "id" : "workspace_list",
            "type": "list",
            "elements":[
                {
                    "id" : "workspace",
                    "args_id" : "workspace_dir",
                    "type": "folder",
                    "label": "Workspace",
                    "defaultValue": "../../test/data/wave_energy_data/iui_test_space",
                    "required": true
                },          
				{        
                    "id" : "land_grid_points",
                    "args_id" : "land_gridPts_uri",
                    "type": "file",
                    "label": "Land and Grid Points Table",
                    "defaultValue": "../../test/data/wave_energy_data/samp_input/LandGridPts_WCVI_221.csv",
                    "required": true,
                    "validateAs": { "type": "CSV",
                    				"fieldsExist": ["ID", "TYPE", "LAT", "LONG", "LOCATION"],
                    				"restrictions": [{"field": "ID",
                                    				"validateAs": {"type": "number",
                                                   				   "allowedValues": {"pattern":"[0-9]+"}}},
                                     				{"field": "TYPE",
                                      				"validateAs": {"type": "string",
                                                    "allowedValues":{"pattern":"LAND|GRID", "flag":"ignoreCase"}}},
                                                    {"field": "LAT",
                                      				"validateAs": {"type": "number",
                                                    "allowedValues":{"pattern":"[-+]?[0-9]*\\.?[0-9]+$"}}},
                                                    {"field": "LONG",
                                      				"validateAs": {"type": "number",
                                                    "allowedValues":{"pattern":"[-+]?[0-9]*\\.?[0-9]+$"}}}
                                        ]}                                    
                                    
                },    
		        {
		            "id": "machine_econ_table",
		            "args_id": "machine_econ_uri",
		            "type": "file",
		            "label": "Machine Economic Table",
		            "defaultValue": "../../test/data/wave_energy_data/samp_input/Machine_PelamisEconCSV.csv",
		            "required": true,
		            "validateAs": { "type": "CSV",
                    				"fieldsExist": ["NAME", "VALUE", "NOTE"],
                    				"restrictions": [{"field": "NAME",
                                    				"validateAs": {"type": "string",
                                                   				   "allowedValues": {"pattern":"capmax|cc|cml|cul|col|omc|p|r|smlpm", 
                                                   				                     "flag": "ignoreCase"}}},
                                     				{"field": "VALUE",
                                      				"validateAs": {"type": "number",
                                                    "allowedValues":{"pattern":"[-+]?[0-9]*\\.?[0-9]+$"}}}
                                        ]}                                    
                                    
		        },
                {
                    "id" : "dem",
                    "args_id": "global_dem",
                    "type": "folder",
                    "label": "Global Digital Elevation Model (DEM)",
                    "defaultValue": "../../test/data/wave_energy_data/samp_input/global_dem",
                    "required": true,
                    "validateAs": {"type": "GDAL"}
                },
                {
                    "id" : "wave_data",
                    "args_id": "wave_data_shape_path",
                    "type": "file",
                    "label": "Wave Data Shapefile",
                    "defaultValue": "../../test/data/wave_energy_data/iui_test_space/Intermediate/WEM_InputOutput_Pts.shp",
                    "required": true,
                    "validateAs": {"type":"OGR",
                    			   "layers": [{"name": {"inheritFrom": "file"},
                                               "type": "polygons", "projection" : "Transverse_Mercator"}],
                                   "fieldsExist": ["Depth_M", "capWE_Sum"]}
                },
                {
                    "id" : "number_of_machines",
                    "args_id": "number_of_machines",
                    "type": "text",
                    "label": "Number Of Machines",
                    "defaultValue": "28",
                    "required": true,
                    "validText": "[0-9]+"
                }
            ]
        }
    ]
}
