{
    "id" : "window",
    "label": "Blue Carbon",
    "targetScript" : "invest_natcap.blue_carbon.blue_carbon",
    "modelName" : "blue_carbon",
    "localDocURI": "../documentation/blue_carbon.html",
    "height": 600,
    "width" : 700,
    "elements": [
                    {
                    "id" : "workspace_list",
                    "type": "list",	        
                            "elements": [
                                            {
                                                "id": "workspace_dir",
                                                "args_id": "workspace_dir",
                                                "type": "folder",
                                                "label": "Workspace",
                                                "defaultValue": "../BlueCarbon/output",
                                                "helpText": "The directory to hold output from a particular model run. <p>For more information see <a href=\"../documentation/blue_carbon.html#data-needs\">Data Needs</a>",
                                                "required": true
                                            },
                                            {
                                                "id": "lulc1_uri",
                                                "args_id": "lulc1_uri",
                                                "type": "file",
                                                "label": "LULC Time 1",
                                                "defaultValue": "../BlueCarbon/input/GBJC_2004_mean.tif",
                                                "helpText": "The land use land cover raster for time 1. <p>For more information see <a href=\"../documentation/blue_carbon.html#data-needs\">Data Needs</a>",
                                                "required": true
                                            },
                                            {
                                                "id" : "year1",
                                                "args_id" : "year1",
                                                "type": "text",
                                                "label": "Year",
                                                "validateAs": {"type": "number"},
                                                "validText": "[0-9]+(\\.[0-9][0-9])?",
                                                "dataType": "float",
                                                "defaultValue": "2010",
                                                "helpText": "The year of the land use land cover raster for time 1. <p>For more information see <a href=\"../documentation/blue_carbon.html#data-needs\">Data Needs</a>",
                                                "required": true
                                            },                                                                
                                            {
                                                "id": "lulc2_uri",
                                                "args_id": "lulc2_uri",
                                                "type": "file",
                                                "label": "LULC Time 2",
                                                "defaultValue": "../BlueCarbon/input/GBJC_2050_mean.tif",
                                                "helpText": "The land use land cover raster for time 2. <p>For more information see <a href=\"../documentation/blue_carbon.html#data-needs\">Data Needs</a>",
                                                "required": true
                                            },
                                            {
                                                "id" : "year2",
                                                "args_id" : "year2",
                                                "type": "text",
                                                "label": "Year",
                                                "validateAs": {"type": "number"},
                                                "validText": "[0-9]+(\\.[0-9][0-9])?",
                                                "dataType": "float",
                                                "defaultValue": "2050",
                                                "helpText": "The year of the land use land cover raster for time 2. <p>For more information see <a href=\"../documentation/blue_carbon.html#data-needs\">Data Needs</a>",
                                                "required": true
                                            },                                                                
                                            {
                                                "id": "carbon_pools_uri",
                                                "args_id": "carbon_pools_uri",
                                                "type": "file",
                                                "label": "Carbon pools",
                                                "defaultValue": "../BlueCarbon/input/carbon.csv",
                                                "helpText": "Carbon in metric tons per hectacre (t ha-1) stored in each of the four fundamental pools for each LULC class. <p>For more information see <a href=\"../documentation/blue_carbon.html#data-needs\">Data Needs</a>",
                                                "required": true
                                            },
                                            {
                                                "id": "transition_matrix_uri",
                                                "args_id": "transition_matrix_uri",
                                                "type": "file",
                                                "label": "Transition matrix",
                                                "defaultValue": "../BlueCarbon/input/transitionmatrix.csv",
                                                "helpText": "Coefficients for the carbon storage rates for the transtion between each of the land use land cover classes. Values above 1 indicate an increase, values below 1 indicate a decrease. Absent transitions are assigned a value of 1, representing no change. <p>For more information see <a href=\"../documentation/blue_carbon.html#data-needs\">Data Needs</a>",
                                                "required": true
                                            }

                                    ]
                   },
                   {
                       "id" : "private_valuation",
                       "type" : "container",
                       "collapsible" : true,
                       "args_id" : "private_valuation",
                       "label" : "Private market valuation.",
                       "elements" : [
                                       {
                                           "id" : "private_valuation_list",
                                           "type" : "list",
                                           "elements" : [
                                                            {
                                                                "id": "carbon_units",
                                                                "args_id": "carbon_units",
                                                                "type": "dropdown",
                                                                "label": "Price in terms of metric tons of",
                                                                "options": ["Carbon (C)",
                                                                            "Carbon Dioxide (CO2)"],
                                                                "defaultValue": 0,
                                                                "required": true,
                                                                "helpText": "The units for the price per unit of carbon type. <p>For more information see <a href=\"../documentation/blue_carbon.html#data-needs\">Data Needs</a>"
                                                            },
                                                            {
                                                                "id": "carbon_value",
                                                                "args_id": "carbon_value",
                                                                "type": "text",
                                                                "width": 70,
                                                                "label": "Value of Carbon (USD/metric ton)",
                                                                "required": true,
                                                                "dataType": "float",
                                                                "validText": "[0-9]+(\\.[0-9][0-9])?",
                                                                "defaultValue": "43.00",
                                                                "validateAs": {"type": "number"},
                                                                "helpText": "The price per unit ton of carbon or C02 as defined in the carbon price units. <p>For more information see <a href=\"../documentation/blue_carbon.html#data-needs\">Data Needs</a>"
                                                            },
                                                            {
                                                                "id": "discount_rate",
                                                                "args_id": "discount_rate",
                                                                "type": "text",
                                                                "width": 70,
                                                                "label": "Market discount in price of Carbon (%)",
                                                                "required": true,
                                                                "dataType": "int",
                                                                "validText": "-?([0-9]+)?\\.[0-9]+",
                                                                "defaultValue": "7",
                                                                "validateAs": {"type": "number"},
                                                                "helpText": "The discount rate as an integer percent. <p>For more information see <a href=\"../documentation/blue_carbon.html#data-needs\">Data Needs</a>"
                                                            },
                                                            {
                                                                "id": "rate_change",
                                                                "args_id": "rate_change",
                                                                "type": "text",
                                                                "width": 70,
                                                                "label": "Annual rate of change in price of Carbon (%)",
                                                                "required": true,
                                                                "dataType": "float",
                                                                "validText": "-?([0-9]+)?\\.[0-9]+",
                                                                "defaultValue": "0",
                                                                "validateAs": {"type": "number"},
                                                                "helpText": "The integer percent increase of the price of carbon per year. <p>For more information see <a href=\"../documentation/blue_carbon.html#data-needs\">Data Needs</a>"
                                                            }
                                                       ]
                                   }
                                ]
                },
                {
                   "id" : "social_valuation",
                   "type" : "container",
                   "collapsible" : true,
                   "args_id" : "social_valuation",
                   "label" : "Social market valuation.",
                   "elements" : [
                                   {
                                       "id" : "social_valuation_list",
                                       "type" : "list",
                                       "elements" : [
                                                        {
                                                            "id": "carbon_schedule",
                                                            "args_id": "carbon_schedule",
                                                            "type": "file",
                                                            "label": "SCC Table",
                                                            "defaultValue": "../BlueCarbon/input/SCC.csv",
                                                            "helpText": "The social cost of carbon table. <p>For more information see <a href=\"../documentation/blue_carbon.html#data-needs\">Data Needs</a>",
                                                            "required": true
                                                        },
                                                        {
                                                            "id": "carbon_schedule_field",
                                                            "args_id": "carbon_schedule_field",
                                                            "type": "OGRFieldDropdown",
                                                            "label": "SCC field",
                                                            "enabledBy": "carbon_schedule",
                                                            "defaultValue": 1,
                                                            "helpText": "The field in the SCC table that contains the value for carbon. <p>For more information see <a href=\"../documentation/blue_carbon.html#data-needs\">Data Needs</a>",
                                                            "returns": "strings"
                                                        }
                                                    ]
                                   }
                                ]
                }
            ]
}
