{
    "id" : "window",
    "label": "Marine Water Quality Biophysical",
    "targetScript" : "invest_natcap.marine_water_quality.marine_water_quality_biophysical",
    "modelName" : "marine_water_quality_biophysical",
    "localDocURI": "../documentation/marine_water_quality_biophysical.html",
    "height": 500,
    "width" : 700,
    "elements": [
        {
            "id" : "workspace_list",
            "type": "list",
            "elements":[
                {
                    "id" : "workspace_dir",
                    "args_id" : "workspace",
                    "type": "folder",
                    "label": "Workspace",
                    "defaultValue": "../MarineWaterQuality",
                    "required": true
                },
                {
                    "id" : "pixel_size",
                    "type": "text",
                    "label": "Output pixel Size in meters",
                    "args_id": "pixel_size",
                    "required": true,
                    "defaultValue": "100",
                    "validateAs": {"type": "number",
                                   "gteq": 0},
                    "dataType": "int",
                    "helpText": "This is an integer value indicating the size of the output pixel resolution.  A smaller number will yield a more finely gridded solution, but will impact runtime and memory usage."
                },
                {
                    "id" : "kps",
                    "type": "text",
                    "label": "Absorption Coefficient (K)",
                    "args_id": "kps",
                    "required": true,
                    "defaultValue": "0.001",
                    "validateAs": {"type": "number",
                                   "gteq": 0},
                    "dataType": "float",
                    "helpText": "Indicates the rate at which a pollutant is absorbed.  This number is global to the entire solution."
                },                
		{
                    "id" : "aoi_poly",
                    "args_id": "aoi_poly_uri",
                    "type": "file",
                    "label": "Area of Interest (AOI)",
                    "defaultValue": "../MarineWaterQuality/input/AOI_clay_soundwideWQ.shp",
                    "required": true,
                    "validateAs": {"type": "OGR"}
                },
                {
                    "id" : "land_poly",
                    "args_id": "land_poly_uri",
                    "type": "file",
                    "label": "Land Polygon",
                    "defaultValue": "../MarineWaterQuality/input/3005_VI_landPolygon.shp",
                    "required": true,
                    "validateAs": {"type": "OGR"}
                },
                {
                    "id" : "source_points",
                    "args_id": "source_points_uri",
                    "type": "file",
                    "label": "Source Point Centroids",
                    "defaultValue": "../MarineWaterQuality/input/floathomes_centroids.shx",
                    "required": true,
                    "validateAs": {"type": "OGR"}
                },
        	{
                    "id" : "source_point_data",
                    "args_id": "source_point_data_uri",
                    "type": "file",
                    "label": "Source Point Data Table",
                    "defaultValue": "../MarineWaterQuality/input/WQM_PAR.csv",
                    "required": true,
                    "validateAs": {"type":"CSV"}
                },
                {
                    "id" : "tide_e",
                    "args_id": "tide_e_points_uri",
                    "type": "file",
                    "label": "Tidal Diffusion Constants (E)",
                    "defaultValue": "../MarineWaterQuality/input/TideE_WGS1984_BCAlbers.shp",
                    "required": true,
                    "validateAs": {"type": "OGR"}
                },
                {
                    "id" : "advection_uv",
                    "args_id": "adv_uv_points_uri",
                    "type": "file",
                    "label": "(Optional) Advection Vectors (UV as point data)",
                    "defaultValue": "../MarineWaterQuality/input/ADVuv_WGS1984_BCAlbers.shp",
                    "required": false,
                    "validateAs": {"type": "OGR"}
                }
            ]
        }
    ]
}
