{
  "id": "window",
  "label": "Crop Production",
  "targetScript": "invest_natcap.crop_production.crop_production",
  "modelName": "crop_production",
  "localDocURI": "../documentation/crop_production.html",
  "height": 800,
  "width": 800,
  "elements": [
    {
      "id": "alpha_only",
      "label": "This tool is in an ALPHA testing stage.",
      "type": "label",
      "helpText": "Alpha tools are considered unstable."
    },
    {
      "id": "workspace_list",
      "type": "list",
      "elements": [
        {
          "id": "workspace_dir",
          "args_id": "workspace_dir",
          "type": "folder",
          "label": "Workspace",
          "defaultValue": "../CropProduction",
          "required": true,
          "validateAs": {
            "type": "folder"
          },
          "helpText": "The selected folder is used as the workspace where all intermediate and final output files will be written. <br><br>If the selected folder does not exist, it will be created.<br><br><b>If datasets already exist in the selected folder, they will be overwritten.</b>"
        },
        {
          "id": "results_suffix",
          "args_id": "suffix",
          "type": "text",
          "dataType": "string",
          "label": "Results Suffix (Optional)",
          "defaultValue": "",
          "required": false,
          "helpText": "This text will be appended to the end of the output files to help separate outputs from multiple runs."
        },
        {
          "id": "lulc_map_uri",
          "args_id": "lulc_map_uri",
          "type": "file",
          "label": "Land Use Map (Raster)",
          "defaultValue": "../CropProduction/input/lulc_map.tif",
          "required": true,
          "validateAs": {
            "type": "GDAL"
          },
          "helpText": ""
        },
        {
          "id": "crop_lookup_table_uri",
          "args_id": "crop_lookup_table_uri",
          "type": "file",
          "label": "Crop Lookup Table (CSV)",
          "defaultValue": "../CropProduction/input/crop_lookup_table.csv",
          "required": true,
          "validateAs": {
            "type": "CSV"
          },
          "helpText": ""
        },
        {
          "id": "spatial_dataset_dir",
          "args_id": "spatial_dataset_dir",
          "type": "folder",
          "label": "Crop Production Model Spatial Dataset Folder",
          "required": true,
          "validateAs": {
            "type": "folder"
          },
          "helpText": ""
        },
        {
          "id": "generate_crop_production_maps",
          "args_id": "generate_crop_production_maps",
          "type": "checkbox",
          "label": "Generate Crop Production Maps",
          "required": true,
          "defaultValue": false,
          "helpText": ""
        }
      ]
    },
    {
      "id": "do_yield_observed",
      "label": "Calculate Yield based on Observed Yields within Region",
      "type": "container",
      "defaultValue": false,
      "collapsible": true,
      "elements": [
        {
          "id": "yield_observed_list",
          "type": "list",
          "elements": [
            {
              "id": "yield_observed_label",
              "type": "label",
              "label": "HELP TEXT"
            }
          ]
        }
      ]
    },
    {
      "id": "do_yield_percentile",
      "label": "Calculate Yield based on Climate-specific Distribution of Observed Yields",
      "type": "container",
      "defaultValue": false,
      "collapsible": true,
      "elements": [
        {
          "id": "yield_percentile_list",
          "type": "list",
          "elements": [
            {
              "id": "yield_percentile_label",
              "type": "label",
              "label": "HELP TEXT"
            }
          ]
        }
      ]
    },
    {
      "id": "do_yield_modeled",
      "label": "Calculate Yield based on Yield Regression Model with Climate-specific Parameters",
      "type": "container",
      "defaultValue": false,
      "collapsible": true,
      "elements": [
        {
          "id": "yield_modeled_list",
          "type": "list",
          "elements": [
            {
              "id": "yield_observed_label",
              "type": "label",
              "label": "HELP TEXT"
            },
            {
              "id": "modeled_fertilizer_maps_dir",
              "args_id": "modeled_fertilizer_maps_dir",
              "type": "folder",
              "label": "Fertilizer Application Rate Maps Folder",
              "defaultValue": "../CropProduction/input/modeled_fertilizer_maps/",
              "required": true,
              "helpText": ""
            },
            {
              "id": "irrigation_map_uri",
              "args_id": "irrigation_map_uri",
              "type": "file",
              "label": "Irrigation Map (Raster)",
              "defaultValue": "../CropProduction/input/irrigation_map.tif",
              "required": true,
              "validateAs": {
                "type": "GDAL"
              },
              "helpText": ""
            }
          ]
        }
      ]
    },
    {
      "id": "do_nutrition",
      "label": "Calculate Nutrition Contents from Yield",
      "type": "container",
      "defaultValue": false,
      "collapsible": true,
      "elements": [
        {
          "id": "nutrition_list",
          "type": "list",
          "elements": [
            {
              "id": "nutrition_table_uri",
              "args_id": "nutrition_table_uri",
              "type": "file",
              "label": "Nutrient Contents Table (CSV)",
              "defaultValue": "../CropProduction/input/nutrition_table.csv",
              "required": true,
              "validateAs": {
                "type": "CSV"
              },
              "helpText": ""
            }
          ]
        }
      ]
    },
    {
      "id": "do_economic_returns",
      "label": "Calculate Economic Returns from Yield",
      "type": "container",
      "defaultValue": false,
      "collapsible": true,
      "elements": [
        {
          "id": "economics_list",
          "type": "list",
          "elements": [
            {
              "id": "economics_table_uri",
              "args_id": "economics_table_uri",
              "type": "file",
              "label": "Economics Table (CSV)",
              "defaultValue": "../CropProduction/input/economics_table.csv",
              "required": true,
              "validateAs": {
                "type": "CSV"
              },
              "helpText": ""
            },
            {
              "id": "economics_fertilizer_maps_dir",
              "args_id": "economics_fertilizer_maps_dir",
              "type": "folder",
              "label": "Fertilizer Application Rate Maps Folder (Optional)",
              "defaultValue": "../CropProduction/input/economics_fertilizer_maps/",
              "required": false,
              "helpText": ""
            }
          ]
        }
      ]
    }
  ]
}