{
    "id" : "window",
    "label": "Recreation Model - Initial Run",
    "targetScript" : "invest_natcap.recreation.recreation_client",
    "modelName" : "recreation_client_init",
    "localDocURI": "../documentation/recreation.html",
    "height": 600,
    "width" : 700,
    "elements": [
        {
            "id" : "mode",
            "args_id" : "mode",
            "type": "hiddenElement",
            "returns": "initial",
            "required": true
        },                                
        {
            "id" : "workspace_list",
            "type": "list",	        
            "elements": [
                {
                    "id" : "workspace_dir",
                    "args_id" : "workspace_dir",
                    "type": "folder",
                    "label": "Workspace",
                    "required": true,
                    "helpText": "Select a folder to be used as your workspace."                    
                },                        
                {
                    "id" : "aoi_file_name",
                    "args_id" : "aoi_file_name",
                    "type": "file",
                    "label": "Area of Interest",
                    "defaultValue": "",
                    "validateAs": {"type": "OGR"},
                    "required": true,
                    "helpText": "Select an area of interest where the model will run the analysis."
                },
                {
                    "id" : "grid",
                    "args_id" : "grid",
                    "type" : "checkbox",
                    "label" : "Grid AOI",
                    "defaultValue" : true,
                    "helpText": "Select if you want the area of interest to be gridded. If unselected the AOI must contain multiple shapes."
                },
                {
                    "id": "grid_type",
                    "args_id" : "grid_type",
                    "type": "dropdown",
                    "label": "Grid type",
                    "options":["rectangular", "hexagonal"],
                    "returns": {"mapValues" : {"rectangular" : 0, "hexagonal" : 1}},
                    "defaultValue": 0,
                    "required": true,
                    "enabledBy" : "grid",
                    "helpText": "Select whether the grid should contain rectangular or hexagonal units."
                    
                },
                {
                    "id" : "cell_size",
                    "args_id" : "cell_size",
                    "type": "text",
                    "label": "Cell size",
                    "validText": "[0-9]+(\\.[0-9][0-9])?",
                    "dataType": "float",
                    "required": true,
                    "enabledBy" : "grid",
                    "helpText": "The size of the grid units measured in the projection units of the AOI. For example, UTM projections use meters."
                },
                {
                    "id" : "comments",
                    "args_id" : "comments",
                    "type": "text",
                    "label": "Comments",
                    "required": false,
                    "helpText": "Any comments for yourself that you would like to have as part of the model run."
                },
                {
                    "id" : "data_dir",
                    "args_id" : "data_dir",
                    "type": "folder",
                    "label": "Data Directory",
                    "required": false,
                    "helpText": "A directory that contains any data you would like included in the model run."
                },
                {
                    "id" : "download",
                    "args_id" : "download",
                    "type": "checkbox",
                    "label": "Download Data",
                    "defaultValue": true,
                    "required": false,
                    "helpText": "Includes the processed unrestricted data (including from the data directory) in the results, which could be useful for scenarios."
                }
            ]
        },
        {
            "id" : "global_data",
            "type" : "container",
            "collapsible" : true,
            "args_id" : "global_data",
            "label" : "Use global datasets.",
            "helpText": "For more information see <a href=\"../documentation/recreation.html#table-99\">Standard Predictors</a>",
            "elements" : [
                {
                    "id" : "global_data_list",
                    "type": "list",
                    "elements": [
                        {
                            "id" : "landscan",
                            "args_id" : "landscan",
                            "type": "checkbox",
                            "label": "Population",
                            "defaultValue": false,
                            "required": false,
                            "helpText": "2010 <a href=\"http://www.ornl.gov/sci/landscan\">Landscan</a> global distribution of ambient population from <a href=\"http://www.ornl.gov\">ORNL</a>"
                        }                   
                    ]
                },
                {
                    "id" : "protected",
                    "args_id" : "protected",
                    "type": "hiddenElement",
                    "label": "Protected Areas",
                    "defaultValue": false,
                    "required": false,
                    "helpText": "2012 <a href=\"http://www.wdpa.org\">World Database on Protected Areas</a> from <a href=\"http://www.unep-wcmc.org\">UNEP-WCMC</a>, <a href=\"http://www.iucn.org/about/work/programmes/gpap_home/gpap_wcpa\">IUCN-WCPA</a>"
                },                     
                {
                    "id" : "osm",
                    "args_id" : "osm",
                    "type" : "container",
                    "collapsible" : true,
                    "label" : "Open Street Maps",
                    "elements" : [
                        {
                            "id": "osm_list",
                            "args_id": "osm_list",
                            "type": "list",
                            "elements" : [
                                {
                                    "id" : "osm_1",
                                    "args_id" : "osm_1",
                                    "type": "checkbox",
                                    "label": "Cultural",
                                    "defaultValue": true,
                                    "required": false,
                                    "helpText": "2012 data from <a href=\"http://www.openstreetmap.org\">OpenStreetMap</a>"
                                },
                                {
                                    "id" : "osm_2",
                                    "args_id" : "osm_2",
                                    "type": "checkbox",
                                    "label": "Industrial",
                                    "defaultValue": true,
                                    "required": false,
                                    "helpText": "2012 data from <a href=\"http://www.openstreetmap.org\">OpenStreetMap</a>"
                                },
                                {
                                    "id" : "osm_3",
                                    "args_id" : "osm_3",
                                    "type": "checkbox",
                                    "label": "Natural",
                                    "defaultValue": true,
                                    "required": false,
                                    "helpText": "2012 data from <a href=\"http://www.openstreetmap.org\">OpenStreetMap</a>"
                                },
                                {
                                    "id" : "osm_4",
                                    "args_id" : "osm_4",
                                    "type": "checkbox",
                                    "label": "Superstructure",
                                    "defaultValue": true,
                                    "required": false,
                                    "helpText": "2012 data from <a href=\"http://www.openstreetmap.org\">OpenStreetMap</a>"
                                },
                                {
                                    "id" : "osm_0",
                                    "args_id" : "osm_0",
                                    "type": "checkbox",
                                    "label": "Miscellaneous",
                                    "defaultValue": true,
                                    "required": false,
                                    "helpText": "2012 data from <a href=\"http://www.openstreetmap.org\">OpenStreetMap</a>"
                                }
                            ]
                        }
                    ]
                },
                {
                    "id" : "lulc",
                    "args_id" : "lulc",
                    "type": "container",
                    "collapsible" : true,
                    "label": "Land Use and Land Coverage",
                    "elements" : [
                        {
                            "id": "lulc_list",
                            "args_id": "lulc_list",
                            "type": "list",
                            "elements" : [
                                {
                                    "id": "lulc_1",
                                    "args_id": "lulc_1",
                                    "type": "checkbox",
                                    "label": "Agriculture",
                                    "defaultValue" : true,
                                    "required" : false,
                                    "helpText": "2008 <a href=\"http://due.esrin.esa.int/globcover\">GlobCover</a> from <a href=\"http://www.esa.int\">ESA</a>"
                                },
                                {
                                    "id": "lulc_2",
                                    "args_id": "lulc_2",
                                    "type": "checkbox",
                                    "label": "Bare",
                                    "defaultValue" : true,
                                    "required" : false,
                                    "helpText": "2008 <a href=\"http://due.esrin.esa.int/globcover\">GlobCover</a> from <a href=\"http://www.esa.int\">ESA</a>"
                                },
                                {
                                    "id": "lulc_3",
                                    "args_id": "lulc_3",
                                    "type": "checkbox",
                                    "label": "Forest",
                                    "defaultValue" : true,
                                    "required" : false,
                                    "helpText": "2008 <a href=\"http://due.esrin.esa.int/globcover\">GlobCover</a> from <a href=\"http://www.esa.int\">ESA</a>"
                                },
                                {
                                    "id": "lulc_4",
                                    "args_id": "lulc_4",
                                    "type": "checkbox",
                                    "label": "Grassland",
                                    "defaultValue" : true,
                                    "required" : false,
                                    "helpText": "2008 <a href=\"http://due.esrin.esa.int/globcover\">GlobCover</a> from <a href=\"http://www.esa.int\">ESA</a>"
                                },
                                {
                                    "id": "lulc_5",
                                    "args_id": "lulc_5",
                                    "type": "checkbox",
                                    "label": "Shrubland",
                                    "defaultValue" : true,
                                    "required" : false,
                                    "helpText": "2008 <a href=\"http://due.esrin.esa.int/globcover\">GlobCover</a> from <a href=\"http://www.esa.int\">ESA</a>"
                                },
                                {
                                    "id": "lulc_6",
                                    "args_id": "lulc_6",
                                    "type": "checkbox",
                                    "label": "Snow and Ice",
                                    "defaultValue" : true,
                                    "required" : false,
                                    "helpText": "2008 <a href=\"http://due.esrin.esa.int/globcover\">GlobCover</a> from <a href=\"http://www.esa.int\">ESA</a>"
                                },
                                {
                                    "id": "lulc_7",
                                    "args_id": "lulc_7",
                                    "type": "checkbox",
                                    "label": "Urban",
                                    "defaultValue" : true,
                                    "required" : false,
                                    "helpText": "2008 <a href=\"http://due.esrin.esa.int/globcover\">GlobCover</a> from <a href=\"http://www.esa.int\">ESA</a>"
                                },
                                {
                                    "id": "lulc_8",
                                    "args_id": "lulc_8",
                                    "type": "checkbox",
                                    "label": "Water",
                                    "defaultValue" : true,
                                    "required" : false,
                                    "helpText": "2008 <a href=\"http://due.esrin.esa.int/globcover\">GlobCover</a> from <a href=\"http://www.esa.int\">ESA</a>"
                                }
                            ]
                        }
                    ]
                },       
                {
                    "id" : "ouoc",
                    "args_id" : "ouoc",
                    "type": "hiddenElement",
                    "collapsible" : true,
                    "label": "Ocean Use and Ocean Coverage",
                    "elements" : [
                        {
                            "id": "ouoc_list",
                            "args_id": "ouoc_list",
                            "type": "list",
                            "elements" : [
                                {
                                    "id" : "mangroves",
                                    "args_id" : "mangroves",
                                    "type": "checkbox",
                                    "label": "Mangroves",
                                    "defaultValue": true,
                                    "required": false,
                                    "helpText": "1997 <a href=\"http://data.unep-wcmc.org/datasets/6\">global composite</a> dataset from <a href=\"http://www.unep-wcmc.org\">UNEP-WCMC</a>"
                                },
                                {
                                    "id" : "reefs",
                                    "args_id" : "reefs",
                                    "type": "checkbox",
                                    "label": "Coral Reefs",
                                    "defaultValue": true,
                                    "required": false,
                                    "helpText": "2010 <a href=\"http://data.unep-wcmc.org/datasets/13\">global composite</a> dataset from <a href=\"http://www.unep-wcmc.org\">UNEP-WCMC</a>"
                                },
                                {
                                    "id" : "grass",
                                    "args_id" : "grass",
                                    "type": "checkbox",
                                    "label": "Seagrasses",
                                    "defaultValue": true,
                                    "required": false,
                                    "helpText": "2005 <a href=\"http://data.unep-wcmc.org/datasets/10\">global composite</a> dataset from <a href=\"http://www.unep-wcmc.org\">UNEP-WCMC</a>"
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}
