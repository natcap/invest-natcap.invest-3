{
    "id" : "window",
    "label": "Recreation Model - Initial Run",
    "targetScript" : "invest_natcap.recreation.recreation_client",
    "modelName" : "recreation_client_init",
    "localDocURI": "../documentation/recreation.html",
    "height": 600,
    "width" : 700,
    "elements": [
        {
            "id" : "workspace_list",
            "type": "list",	        
            "elements": [
                {		    
                    "id":"alpha_only",
                    "label": "This tool is in an ALPHA testing stage and should not be used for decision making.",
                    "type": "label",
                    "helpText": "Alpha tools are considered unstable."
                },
                {
                    "id" : "mode",
                    "args_id" : "mode",
                    "type": "hiddenElement",
                    "returns": "initial",
                    "required": true
                },                        
                {
                    "id" : "workspace_dir",
                    "args_id" : "workspace_dir",
                    "type": "folder",
                    "label": "Workspace",
                    "required": true,
                    "helpText": "Select a folder to be used as your workspace."                    
                },                        
                {
                    "id" : "aoi_file_name",
                    "args_id" : "aoi_file_name",
                    "type": "file",
                    "label": "Area of Interest",
                    "defaultValue": "",
                    "validateAs": {"type": "OGR"},
                    "required": true,
                    "helpText": "Select an area of interest where the model will run the analysis."
                },
                {
                    "id" : "grid",
                    "args_id" : "grid",
                    "type" : "checkbox",
                    "label" : "Grid AOI",
                    "defaultValue" : true,
                    "helpText": "Select if you want the area of interest to be gridded. If unselected the AOI must contain multiple shapes."
                },
                {
                    "id": "grid_type",
                    "args_id" : "grid_type",
                    "type": "dropdown",
                    "label": "Grid type",
                    "options":["rectangular", "hexagonal"],
                    "returns": {"mapValues" : {"rectangular" : 0, "hexagonal" : 1}},
                    "defaultValue": 0,
                    "required": true,
                    "enabledBy" : "grid",
                    "helpText": "Select whether the grid should contain rectangular or hexagonal units."
                    
                },
                {
                    "id" : "cell_size",
                    "args_id" : "cell_size",
                    "type": "text",
                    "label": "Cell size",
                    "defaultValue": "1",
                    "validText": "[0-9]+(\\.[0-9][0-9])?",
                    "dataType": "float",
                    "required": true,
                    "enabledBy" : "grid",
                    "helpText": "The size of the grid units measured in the projection units of the AOI. For example, UTM projections use meters."
                },
                {
                    "id" : "comments",
                    "args_id" : "comments",
                    "type": "text",
                    "label": "Comments",
                    "required": false,
                    "helpText": "Any commments for yourself that you would like to have as part of the model run."
                },
                {
                    "id" : "data_dir",
                    "args_id" : "data_dir",
                    "type": "folder",
                    "label": "Data Directory",
                    "required": false,
                    "helpText": "A directory that contains any data you would like included in the model run."
                },
                {
                    "id" : "download",
                    "args_id" : "download",
                    "type": "checkbox",
                    "label": "Download Data",
                    "defaultValue": true,
                    "required": false,
                    "helpText": "Includes the processed unrestricted data (including from the data directory) in the results, which could be useful for scenarios."
                }]},
                {
                    "id" : "global_data",
                    "type" : "container",
                    "collapsible" : true,
                    "args_id" : "global_data",
                    "label" : "Use global datasets.",
                    "elements" : [
                        {
                            "id" : "landscan",
                            "args_id" : "landscan",
                            "type": "checkbox",
                            "label": "2010 Population",
                            "defaultValue": false,
                            "required": false
                        },		        		        		        
                        {
                            "id" : "osm_point",
                            "args_id" : "osm_point",
                            "type": "checkbox",
                            "label": "OSM Points",
                            "defaultValue": false,
                            "required": false
                        },
                        {
                            "id" : "osm_line",
                            "args_id" : "osm_line",
                            "type": "checkbox",
                            "label": "OSM Lines",
                            "defaultValue": false,
                            "required": false
                        },
                        {
                            "id" : "osm_poly",
                            "args_id" : "osm_poly",
                            "type": "checkbox",
                            "label": "OSM Polygons",
                            "defaultValue": false,
                            "required": false
                        },
                        {
                            "id" : "protected",
                            "args_id" : "protected",
                            "type": "checkbox",
                            "label": "Protected Areas",
                            "defaultValue": false,
                            "required": false
                        },
                        {
                            "id" : "lulc",
                            "args_id" : "lulc",
                            "type": "container",
                            "collapsible" : true,
                            "label": "LULC",
                            "elements" : [
                                {
                                    "id": "lulc_1",
                                    "args_id": "lulc_1",
                                    "type": "checkbox",
                                    "label": "Agriculture",
                                    "defaultValue" : true,
                                    "required" : false
                                },
                                {
                                    "id": "lulc_2",
                                    "args_id": "lulc_2",
                                    "type": "checkbox",
                                    "label": "Bare",
                                    "defaultValue" : true,
                                    "required" : false
                                },
                                {
                                    "id": "lulc_3",
                                    "args_id": "lulc_3",
                                    "type": "checkbox",
                                    "label": "Forest",
                                    "defaultValue" : true,
                                    "required" : false
                                },
                                {
                                    "id": "lulc_4",
                                    "args_id": "lulc_4",
                                    "type": "checkbox",
                                    "label": "Grassland",
                                    "defaultValue" : true,
                                    "required" : false
                                },
                                {
                                    "id": "lulc_5",
                                    "args_id": "lulc_5",
                                    "type": "checkbox",
                                    "label": "Shrubland",
                                    "defaultValue" : true,
                                    "required" : false
                                },
                                {
                                    "id": "lulc_6",
                                    "args_id": "lulc_6",
                                    "type": "checkbox",
                                    "label": "Snow and Ice",
                                    "defaultValue" : true,
                                    "required" : false
                                },
                                {
                                    "id": "lulc_7",
                                    "args_id": "lulc_7",
                                    "type": "checkbox",
                                    "label": "Urban",
                                    "defaultValue" : true,
                                    "required" : false
                                },
                                {
                                    "id": "lulc_8",
                                    "args_id": "lulc_8",
                                    "type": "checkbox",
                                    "label": "Water",
                                    "defaultValue" : true,
                                    "required" : false
                                }
                            ]

                        },				
                        {
                            "id" : "mangroves",
                            "args_id" : "mangroves",
                            "type": "checkbox",
                            "label": "Mangroves",
                            "defaultValue": false,
                            "required": false
                        },
                        {
                            "id" : "reefs",
                            "args_id" : "reefs",
                            "type": "checkbox",
                            "label": "Coral Reefs",
                            "defaultValue": false,
                            "required": false
                        },
                        {
                            "id" : "grass",
                            "args_id" : "grass",
                            "type": "checkbox",
                            "label": "Seagrasses",
                            "defaultValue": false,
                            "required": false
                        }
                    ]
                }
           ]
}
