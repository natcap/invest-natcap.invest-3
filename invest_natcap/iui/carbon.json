{
    "id" : "window",
    "label": "InVEST Carbon Model (Biophysical and Valuation)",
    "targetScript" : "invest_natcap.carbon.carbon_combined",
    "modelName" : "carbon_combined",
    "localDocURI": "../documentation/carbonstorage.html",
    "height": 800,
    "width" : 700,
    "elements": [
        {
            "id": "workspace_list",
            "type": "list",
            "elements": [
                {
                    "id" : "workspace",
                    "args_id" : "workspace_dir",
                    "type": "folder",
                    "label": "Workspace",
                    "defaultValue": "../Carbon",
                    "required": true,
                    "helpText": "A directory that will contain the intermediate and output files for this run."
                },
                {
                    "id" : "results_suffix",
                    "args_id" : "suffix",
                    "type": "text",
                    "dataType": "string",
                    "validText": "[a-zA-Z0-9]*",
                    "label": "Results Suffix (optional)",
                    "defaultValue": "",
                    "returns": {"ifEmpty": "pass"},
                    "required": false,
                    "helpText":"This text will be appended to the end of the output files to help separate outputs from multiple runs."
                }
            ]
        },
        {
            "id": "label_list",
            "type": "list",
            "elements": [
                {
                    "id": "top_label",
                    "type": "label",
                    "label": "You can choose to run the biophysical model, the valuation model, or both. In order to run the valuation model, you must either run the biophysical model with sequestration analysis, or provide your own carbon sequestration map."
                }
            ]
        },
        {
            "id": "biophysical_container",
            "type": "container",
            "collapsible": true,
	    "defaultValue": true,
            "args_id": "do_biophysical",
            "label": "Run biophysical model",
            "elements": [
                {
                    "id": "biophysical_first_list",
                    "type": "list",
                    "elements": [
                        {
                            "id" : "calc_sequestration",
                            "type": "checkbox",
                            "label": "Calculate sequestration",
                            "helpText": "Check to enable sequestration analysis. This requires inputs of LULC maps for both current and future scenarios.",
                            "defaultValue": false,
                            "required": false
                        },
                        {
                            "id": "redd",
                            "type": "checkbox",
                            "label": "REDD scenario analysis",
                            "enabledBy": "calc_sequestration",
                            "helpText": "Check to enable REDD scenario analysis. This requires three LULC maps: one for the current scenario, one for the future baseline scenario, and one for the future REDD policy scenario.",
                            "defaultValue": false,
                            "required": false
                        }
                    ]
                },
                {
                    "id" : "cur_lulc_box",
                    "type": "container",
                    "collapsible" : false,
                    "label": "Current land use/land cover",
                    "elements": [
                        {
                            "id" : "cur_lulc_list",
                            "type" : "list",
                            "elements": [
                                {
                                    "id" : "cur_lulc_raster",
                                    "args_id" : "lulc_cur_uri",
                                    "type": "file",
                                    "label": "Raster location",
                                    "defaultValue": "../Base_Data/Terrestrial/lulc_samp_cur/hdr.adf",
                                    "required": true,
                                    "validateAs": {"type": "GDAL"},
                                    "helpText": "Location of the landcover map for the current scenario."
                                },
                                {
                                    "id" : "cur_lulc_year",
                                    "type": "text",
                                    "width": 70,
                                    "validText": "-?[0-9]+",
                                    "dataType": "int",
                                    "args_id": "lulc_cur_year",
                                    "label": "Year of land cover",
                                    "required": false,
                                    "enabledBy": "calc_sequestration",
                                    "requiredIf": ["cur_harvest_map", "fut_harvest_map"],
                                    "defaultValue": "2000",
                                    "helpText": "The calendar year of the current scenario."
                                }
                            ]
                        }
                    ]
                },
                {
                    "id" : "fut_lulc_box",
                    "type": "container",
                    "collapsible": false,
                    "label": "Future land use/land cover",
                    "elements": [
                        {
                            "id" : "fut_lulc_list",
                            "type" : "list",
                            "elements" : [
                                {
                                    "id" : "fut_lulc_raster",
                                    "type": "file",
                                    "label": "Baseline raster",
                                    "args_id": "lulc_fut_uri",
                                    "required": false,
                                    "enabledBy": "calc_sequestration",
                                    "defaultValue": "../Base_Data/Terrestrial/lulc_samp_fut/hdr.adf",
                                    "requiredIf": ["calc_sequestration"],
                                    "validateAs": {"type": "GDAL"},
                                    "helpText": "Location of the landcover map for the future scenario. If REDD scenario analysis is enabled, this should be the reference, or baseline, future scenario against which to compare the REDD policy scenario."
                                },
                                {
                                    "id" : "redd_lulc_raster",
                                    "type": "file",
                                    "label": "REDD policy raster",
                                    "args_id": "lulc_redd_uri",
                                    "required": false,
                                    "enabledBy": "redd",
                                    "defaultValue": "../Carbon/Input/lulc_samp_redd.tif",
                                    "requiredIf": ["redd"],
                                    "validateAs": {"type": "GDAL"},
                                    "helpText": "Location of the landcover map for the REDD policy future scenario. This scenario will be compared to the baseline future scenario."
                                },
                                {
                                    "id" : "fut_lulc_year",
                                    "type": "text",
                                    "width": 70,
                                    "validText": "-?[0-9]+",
                                    "dataType": "int",
                                    "label": "Year of land cover",
                                    "args_id": "lulc_fut_year",
                                    "required": false,
                                    "defaultValue": "2030",
                                    "enabledBy": "calc_sequestration",
                                    "requiredIf": ["fut_harvest_map"],
                                    "helpText": "The calendar year of the future scenario."
                                }
                            ]
                        }
                    ]
                },
                {
                    "id": "biophysical_second_list",
                    "type": "list",
                    "elements": [
                        {
                            "id" : "carbon_pools",
                            "type": "file",
                            "label": "Carbon pools",
                            "defaultValue": "../Carbon/Input/carbon_pools_samp.csv",
                            "args_id": "carbon_pools_uri",
                            "required": true,
                            "disabledBy": "uncertain_carbon_pool_container",
                            "validateAs": {"type": "table",
                                           "fieldsExist": ["lucode", "C_above", "C_Below", "C_Soil", "C_Dead"]},
                            "helpText": "A table that maps the land cover ids to carbon pools.  The table must contain columns of 'LULC', 'C_above', 'C_Below', 'C_Soil', 'C_Dead' as described in the user's guide.  The values in LULC must at least include the LULC ids in the land cover maps."
                        },
                        {
                            "id" : "cur_harvest_map",
                            "type": "file",
                            "label": "Current harvest rate map",
                            "args_id": "hwp_cur_shape_uri",
                            "required": false,
                            "defaultValue": "../Carbon/Input/harv_samp_cur.shp",
                            "enabledBy": "calc_sequestration",
                            "disabledBy": "redd",
                            "validateAs": {"type": "OGR",
                                           "layers": [{"name": {"inheritFrom": "filename"}, "type": "polygons"}],
                                           "fieldsExist": ["Cut_cur", "Start_date", "Freq_cur", "Decay_cur", "C_den_cur", "BCEF_cur"]},
                            "returns": {"ifEmpty": "pass"},
                            "helpText": "A shapefile to indicate harvested wood products for the current scenario.  The field is optional.  If supplied the shapefile must have the fields 'Cut_cur', 'Start_date', 'Freq_cur', 'Decay_cur', 'C_den_cur', 'BCEF_cur'."
                        },
                        {
                            "id" : "fut_harvest_map",
                            "type": "file",
                            "label": "Future harvest rate map",
                            "args_id": "hwp_fut_shape_uri",
                            "required": false,
                            "defaultValue": "../Carbon/Input/harv_samp_fut.shp",
                            "enabledBy": "calc_sequestration",
                            "disabledBy": "redd",
                            "validateAs": {"type": "OGR",
                                           "layers": [{"name": {"inheritFrom": "filename"}, "type": "polygons"}],
                                           "fieldsExist": ["Cut_fut", "Freq_fut", "Decay_fut", "C_den_fut", "BCEF_fut"]},
                            "returns": {"ifEmpty": "pass"},
                            "helpText": "A shapefile to indicate harvested wood products for the future scenario.  The field is optional.  If supplied the shapefile must have the fields 'Cut_cur', 'Start_date', 'Freq_cur', 'Decay_cur', 'C_den_cur', 'BCEF_cur'."
                        }

                    ]
                },
                {
                    "id": "uncertain_carbon_pool_container",
                    "type": "container",
                    "collapsible": true,
                    "args_id": "do_uncertainty",
                    "label": "Data for uncertainty analysis (enable to trigger uncertainty analysis)",
                    "elements": [
                        {
                            "id": "uncertainty_list",
                            "type": "list",
                            "elements": [
                                {
                                    "id" : "carbon_pools_uncertain",
                                    "type": "file",
                                    "label": "Carbon pools",
                                    "defaultValue": "../Carbon/Input/carbon_pools_samp_uncertain.csv",
                                    "args_id": "carbon_pools_uncertain_uri",
                                    "required": true,
                                    "validateAs": {"type": "table",
                                                   "fieldsExist": ["lucode",
                                                                   "C_above_mean", "C_above_sd",
                                                                   "C_below_mean", "C_below_sd",
                                                                   "C_soil_mean", "C_soil_sd",
                                                                   "C_dead_mean", "C_dead_sd"]},
                                    "helpText": "A table that maps the land cover ids to probability distributions for carbon pools. Each probability distribution must be specified by a mean and a standard deviation. The table must contain columns of 'LULC', 'C_above_mean', 'C_above_sd', 'C_below_mean', 'C_below_sd', 'C_soil_mean', 'C_soil_sd', 'C_dead_mean', and 'C_dead_sd' as described in the user's guide.  The values in LULC must at least include the LULC ids in the land cover maps."
                                },
                                {
                                    "id": "confidence_threshold",
                                    "type": "text",
                                    "width": 50,
                                    "validText": "[0-9][0-9]([.][0-9]*)?",
                                    "defaultValue": "90",
                                    "dataType": "float",
                                    "args_id": "confidence_threshold",
                                    "label": "Confidence threshold",
                                    "requiredIf": ["carbon_pools_uncertain"],
                                    "helpText": "The percent confidence that should be used as a minimum threshold for highlighting areas of confidence in the output data."
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "id": "sequestration_container",
            "type": "container",
            "collapsible": false,
            "label": "Sequestration data (required for valuation if biophysical model is not run)",
            "elements": [
                {
                    "id": "sequestration_list",
                    "type": "list",
                    "elements": [
                        {
                            "id":"sequest_uri",
                            "type": "file",
                            "label": "Sequestration raster",
                            "args_id": "sequest_uri",
                            "validateAs": {"type": "GDAL"},
                            "disabledBy": "biophysical_container",
		            "helpText": "The per-pixel sequestered carbon either from a run of the InVEST Carbon Biophysical model, or from a user defined source."
                        },
                        {
                            "id": "yr_cur",
                            "args_id": "yr_cur",
                            "type": "text",
                            "width": 70,
                            "label": "Start year of sequestration measurement",
                            "required": true,
                            "dataType": "int",
                            "validText": "-?[0-9]+",
                            "disabledBy": "biophysical_container",
                            "validateAs": {"type": "number"},
		            "helpText": "The calendar year of the current scenario."
                        },
                        {
                            "id": "yr_fut",
                            "args_id": "yr_fut",
                            "type": "text",
                            "width": 70,
                            "label": "Final year of sequestration measurement",
                            "required": true,
                            "dataType": "int",
                            "validText": "-?[0-9]+",
                            "disabledBy": "biophysical_container",
                            "validateAs": {"type": "number"},
		            "helpText": "The calendar year of the future scenario."
                        }
                    ]
                }
            ]
        },
        {
            "id": "valuation_container",
            "type": "container",
            "collapsible": true,
            "args_id": "do_valuation",
            "label": "Run valuation model",
            "elements": [
                {
                    "id": "valuation_label_list",
                    "type": "list",
                    "elements": [
                        {
                            "id": "valuation_label",
                            "type": "label",
                            "label": "In order to run valuation, you must either run the biophysical model with sequestration analysis, or provide your own sequestration data above."
                        }
                    ]
                },
                {
                    "id": "valuation_list",
                    "type": "list",
                    "elements": [
		        {
		            "id": "carbon_price_units",
		            "args_id": "carbon_price_units",
		            "type": "dropdown",
		            "label": "Price in terms of metric tons of",
		            "options": ["Carbon (C)",
				        "Carbon Dioxide (CO2)"],
		            "defaultValue": 0,
		            "required": true,
		            "helpText": "The units for the price per unit of carbon type."
		        },
                        {
                            "id": "value",
                            "args_id": "V",
                            "type": "text",
                            "width": 70,
                            "label": "Value of Carbon (USD/metric ton)",
                            "required": true,
                            "dataType": "float",
                            "validText": "[0-9]+(\\.[0-9][0-9])?",
                            "defaultValue": "43.00",
                            "validateAs": {"type": "number"},
		            "helpText": "The price per unit ton of carbon or C02 as defined in the carbon price units."
                        },
                        {
                            "id": "discount_rate",
                            "args_id": "r",
                            "type": "text",
                            "width": 70,
                            "label": "Market discount in price of Carbon (%)",
                            "required": true,
                            "dataType": "int",
                            "validText": "-?([0-9]+)?\\.[0-9]+",
                            "defaultValue": "7",
                            "validateAs": {"type": "number"},
		            "helpText": "The discount rate as an integer percent."
                        },
                        {
                            "id": "rate_change",
                            "args_id": "c",
                            "type": "text",
                            "width": 70,
                            "label": "Annual rate of change in price of Carbon (%)",
                            "required": true,
                            "dataType": "float",
                            "validText": "-?([0-9]+)?\\.[0-9]+",
                            "defaultValue": "0",
                            "validateAs": {"type": "number"},
		            "helpText": "The integer percent increase of the price of carbon per year."
                        }
                    ]
                }
            ]
        }
    ]
}
