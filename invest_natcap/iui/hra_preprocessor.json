{
    "id": "window",
    "label": "Habitat Risk Assessment Preprocessor",
    "targetScript": "invest_natcap.habitat_risk_assessment.hra_preprocessor",
    "modelName": "hra_preprocess",
    "localDocURI": "../documentation/habitat_risk_assessment.html",
    "height": 700,
    "width": 700,
    "elements": [
        {
            "id": "hra_preprocess_list",
            "type": "list",
            "elements": [
                {
                    "id":"output_dir",
                    "type": "folder",
                    "label": "Workspace",
                    "required": true,
                    "validateAs": {"type": "folder"},
                    "args_id": "workspace_dir",
                    "defaultValue": "../hra_preprocess"
                },
                {
                    "id":"habs_dir",
                    "args_id": "habitats_dir",
                    "type": "hideableFileEntry",
                    "label": "Use Habitat Layers?",
                    "required": false,
                    "validateAs": {"type": "folder",
		    		  "mustExist": true},
                    "defaultValue": "../HabitatRiskAssess/Input/HabitatLayers",
                    "helpText": "By checking this box, you are indicating that you would like to use habitats as a base for overlap with provided stressors."
                },
                {
                    "id":"species_dir",
                    "args_id": "species_dir",
                    "type": "hideableFileEntry",
                    "label": "Use Species Layers?",
                    "required": false,
                    "validateAs": {"type": "folder",
		    		  "mustExist": true},
                    "defaultValue": "../HabitatRiskAssess/Input/SpeciesLayers",
                    "helpText": "By checking this box, you are indicating that you would like to use species as a base for overlap with provided stressors."
                },
                {
                    "id":"stressor_dir",
                    "type": "folder",
                    "label": "Directory to stressor layers",
                    "required": true,
                    "validateAs": {"type": "folder",
		    		  "mustExist": true},
                    "args_id": "stressor_dir",
                    "defaultValue": "../HabitatRiskAssess/Input/StressorLayers"
                }
            ]
        },
        {
            "id" : "cur_lulc_box",
            "type": "container",
            "collapsible" : false,
            "label": "Criteria",
            "elements": [
                {
                    "id": "exp_crit",
                    "type": "multi",
                    "args_id": "exposure_crits",
                    "label": "Exposure",
                    "sampleElement": {"id": "sample_id",
                                      "type": "text",
                                      "label": "Input Criteria",
                                      "validateAs": {"type": "text"}},
                    "defaultValue": ["Management Effectiveness", "Intensity"],
                    "linkText": "Add Another"
                },  
                {
                    "id": "sens_crit",
                    "type": "multi",
                    "args_id": "sensitivity_crits",
                    "label": "Sensitivity",
                    "sampleElement": {"id": "sample_id",
                                      "type": "text",
                                      "label": "Input Criteria",
                                      "validateAs": {"type": "text"}},
                    "linkText": "Add Another"
                },  
                {
                    "id": "res_crit",
                    "type": "multi",
                    "args_id": "resiliance_crits",
                    "label": "Resiliance",
                    "sampleElement": {"id": "sample_id",
                                      "type": "text",
                                      "label": "Input Criteria",
                                      "validateAs": {"type": "text"}},
                    "linkText": "Add Another"
                }  
            ]
        },
        {
            "id": "hra_preprocess_list",
            "type": "list",
            "elements": [
            {
                "id" : "do_shapes",
                "args_id" : "do_shapes",
                "type": "checkbox",
                "label": "Use Shapefile Criteria?",
                "defaultValue": false,
                "required": true,
                "helpText": "By checking this box, you are indicating that you would like to use criteria from shapefiles."
            },
            {
                "id":"crit_dir",
                "args_id": "crit_dir",
                "type": "folder",
                "required": false,
                "requiredIf": ["do_shapes"],
                "enabledBy": "do_shapes",
                "validateAs": {"type": "folder",
                            "mustExist": true},
                "defaultValue": "../HabitatRiskAssess/Input/HabitatLayers",
                "label": "Directory to Criteria Layers",
                "helpText":  "Each shapefile in the folder directories will need to conatin the 'Rating' attribute in order to use it for calculation in the HRA model. Refer to the HRA User's Guide for information about the MANDATORY layout of the shapefile directories."
            }
            ]
        }
    ]
}
