{
    "id": "window",
    "label": "Habitat Risk Assessment Preprocessor",
    "targetScript": "invest_natcap.habitat_risk_assessment.hra_preprocessor",
    "modelName": "hra_preprocess",
    "localDocURI": "../documentation/habitat_risk_assessment.html",
    "height": 500,
    "width": 700,
    "elements": [
        {
            "id": "hra_preprocess_list",
            "type": "list",
            "elements": [
			{		    
                            "id":"alpha_only",
                            "label": "This tool is in an ALPHA testing stage and should not be used for decision making",
			                 "type": "label"
			},
                {
                    "id":"output_dir",
                    "type": "folder",
                    "label": "Workspace",
                    "required": true,
                    "validateAs": {"type": "folder"},
                    "args_id": "workspace_dir",
                    "defaultValue": "../HabitatRiskAssess"
                },
                {
                    "id":"habs_dir",
                    "args_id": "habitats_dir",
                    "type": "hideableFileEntry",
                    "label": "Calculate Risk to Habitats?",
                    "required": false,
                    "validateAs": {"type": "folder",
		    		  "mustExist": true},
                    "defaultValue": "../HabitatRiskAssess/Input/HabitatLayers",
                    "helpText": "By checking this box, you are indicating that you would like to use habitats as a base for overlap with provided stressors. This is the path to your habitat layers folder."
                },
                {
                    "id":"species_dir",
                    "args_id": "species_dir",
                    "type": "hideableFileEntry",
                    "label": "Calculate Risk to Species?",
                    "required": false,
                    "validateAs": {"type": "folder",
		    		  "mustExist": true},
                    "defaultValue": "../HabitatRiskAssess/Input/SpeciesLayers",
                    "helpText": "By checking this box, you are indicating that you would like to use species as a base for overlap with provided stressors. This is the path to the species layers folder."
                },
                {
                    "id":"stressor_dir",
                    "type": "folder",
                    "label": "Directory for Stressors Layers",
                    "required": true,
                    "validateAs": {"type": "folder",
		    		  "mustExist": true},
                    "args_id": "stressors_dir",
                    "defaultValue": "../HabitatRiskAssess/Input/StressorLayers"
                }
            ]
        },
        {
            "id" : "cur_lulc_box",
            "type": "container",
            "collapsible" : false,
            "label": "Criteria",
            "elements": [
                {
                    "id": "help_label",
                    "type": "label",
                    "label": "(Choose at least 1 criteria for each category below, and at least 4 total.)"
                },
                {
                    "id": "exp_crit",
                    "type": "multi",
                    "args_id": "exposure_crits",
                    "label": "Exposure",
                    "sampleElement": {"id": "sample_id",
                                      "type": "text",
                                      "label": "Input Criteria",
                                      "validateAs": {"type": "text"}},
                    "defaultValue": ["Management Effectiveness", "Intensity Rating",
                                    "Change in Area Rating", "Change in Structure Rating"],
                    "linkText": "Add Another"
                },  
                {
                    "id": "sens_crit",
                    "type": "multi",
                    "args_id": "sensitivity_crits",
                    "label": "Sensitivity",
                    "sampleElement": {"id": "sample_id",
                                      "type": "text",
                                      "label": "Input Criteria",
                                      "validateAs": {"type": "text"}},
                    "defaultValue": ["Temporal Overlap", "Frequency of Disturbance"],
                    "linkText": "Add Another"
                },  
                {
                    "id": "res_crit",
                    "type": "multi",
                    "args_id": "resilience_crits",
                    "label": "Resilience",
                    "sampleElement": {"id": "sample_id",
                                      "type": "text",
                                      "label": "Input Criteria",
                                      "validateAs": {"type": "text"}},
                    "defaultValue": ["Recruitment Rate", "Natural Mortality Rate", 
                                    "Connectivity Rate", "Recovery Time"],
                    "linkText": "Add Another"
                }  
            ]
        },
        {
            "id": "hra_preprocess_list",
            "type": "list",
            "elements": [
            {
                "id" : "crit_dir",
                "args_id" : "criteria_dir",
                "type": "hideableFileEntry",
                "label": "Use Spatially Explicit Risk Score (shapefiles)",
                "defaultValue": "../HabitatRiskAssess/Input/HabitatLayers",
                "validateAs": {"type": "folder",
                            "mustExist": true},
                "required": false,
                "helpText": "By checking this box, you are indicating that you would like to use criteria from shapefiles Each shapefile in the folder directories will need to conatin the 'Rating' attribute in order to use it for calculation in the HRA model. Refer to the HRA User's Guide for information about the MANDATORY layout of the shapefile directories."
            }
            ]
        }
    ]
}
