{
    "id": "window",
    "label": "Habitat Suitability",
    "targetScript": "invest_natcap.habitat_suitability.habitat_suitability",
    "modelName": "hra_preprocess",
    "localDocURI": "../documentation/habitat_suitability.html",
    "height": 700,
    "width": 700,
    "elements": [
        {
            "id": "output_list",
            "label": "Output Parameters",
            "type": "container",
            "collapsible": false,
            "elements": [
                {
                    "id": "sequestration_list",
                    "type": "list",
                    "elements": [
                        {
                            "id": "workspace_dir",
                            "type": "folder",
                            "label": "Workspace",
                            "required": true,
                            "validateAs": {"type": "folder"},
                            "args_id": "workspace_dir",
                            "defaultValue": "../HabitatSuitability",
                            "helpText": "Select a folder to be used as your workspace.  If the folder you select does not exist, it will be created for you.<br/><br/>This folder will contain the shapefiles and rasters produced by this model.  <b>If datasets already exist in this folder, they will be overwritten</b>."
                        },
                        {
                            "id" : "output_cell_size",
                            "type": "text",
                            "width": 70,
                            "validText": "[0-9]+",
                            "dataType": "float",
                            "args_id": "output_cell_size",
                            "label": "Output Cell Size (optional)",
                            "required": false,
                            "defaultValue": "",
                            "helpText": "The output cell size of the suitability masks.  If left blank will default to the smallest cell size of the input biophysical layers."
                        }
                    ]
                }
            ]
        },
        {
            "id": "biophysical_container",
            "label": "Biophysical Parameters",
            "type": "container",
            "collapsible": false,
            "elements": [
                {
                    "id": "biophysical_list",
                    "type": "list",
                    "elements": [
                        {
                            "id": "temperature_biophysical_uri",
                            "type": "file",
                            "label": "Temperature Biophysical Layer",
                            "required": true,
                            "validateAs": {"type": "GDAL"},
                            "args_id": "temperature_biophysical_uri",
                            "defaultValue": "",
                            "helpText": "A raster that represents a spatial biophysical property."
                        },
                        {
                            "id": "salinity_biophysical_uri",
                            "type": "file",
                            "label": "Salinity Biophysical Layer",
                            "required": true,
                            "validateAs": {"type": "GDAL"},
                            "args_id": "salinity_biophysical_uri",
                            "defaultValue": "",
                            "helpText": "A raster that represents a spatial biophysical property."
                        },
                        {
                            "id": "depth_biophysical_uri",
                            "type": "file",
                            "label": "Depth Biophysical Layer",
                            "required": true,
                            "validateAs": {"type": "GDAL"},
                            "args_id": "depth_biophysical_uri",
                            "defaultValue": "",
                            "helpText": "A raster that represents a spatial biophysical property."
                        }
                    ]
                }
            ]
        },
        {
            "id": "habitat_container",
            "label": "Oyster Habitat Suitability Parameters",
            "type": "container",
            "collapsible": false,
            "elements": [
                {
                    "id": "habitat_list",
                    "type": "list",
                    "elements": [
                        {
                            "id": "oyster_habitat_suitability_temperature_table_uri",
                            "type": "file",
                            "label": "Oyster Reef Habitat Suitability (Temperature)",
                            "required": true,
                            "validateAs": {"type": "CSV"},
                            "args_id": "oyster_habitat_suitability_temperature_table_uri",
                            "defaultValue": "",
                            "helpText": "A CSV that has habitat suitability curves on it.  It will have one column titled 'suitability' and another column titled 'temperature'."
                        },
                        {
                            "id": "oyster_habitat_suitability_salinity_table_uri",
                            "type": "file",
                            "label": "Oyster Reef Habitat Suitability (Salinity)",
                            "required": true,
                            "validateAs": {"type": "CSV"},
                            "args_id": "oyster_habitat_suitability_salinity_table_uri",
                            "defaultValue": "",
                            "helpText": "A CSV that has habitat suitability curves on it.  It will have one column titled 'suitability' and one other column titled 'salinity'."
                        },
                        {
                            "id": "oyster_habitat_suitability_depth_table_uri",
                            "type": "file",
                            "label": "Oyster Reef Habitat Suitability (Depth)",
                            "required": true,
                            "validateAs": {"type": "CSV"},
                            "args_id": "oyster_habitat_suitability_depth_table_uri",
                            "defaultValue": "",
                            "helpText": "A CSV that has habitat suitability curves on it.  It will have one column titled 'suitability' and one other column titled 'depth'."
                        }
                    ]
                }
            ]
        }
    ]
}
