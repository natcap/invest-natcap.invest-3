{
    "id": "window",
    "label": "Habitat Suitability",
    "targetScript": "invest_natcap.habitat_suitability.habitat_suitability",
    "modelName": "hra_preprocess",
    "localDocURI": "../documentation/habitat_suitability.html",
    "height": 700,
    "width": 700,
    "elements": [
        {
            "id": "output_list",
            "label": "Output Parameters",
            "type": "container",
            "collapsible": false,
            "elements": [
                {
                    "id": "sequestration_list",
                    "type": "list",
                    "elements": [
                        {
                            "id": "workspace_dir",
                            "type": "folder",
                            "label": "Workspace",
                            "required": true,
                            "validateAs": {"type": "folder"},
                            "args_id": "workspace_dir",
                            "defaultValue": "../HabitatSuitability",
                            "helpText": "Select a folder to be used as your workspace.  If the folder you select does not exist, it will be created for you.<br/><br/>This folder will contain the shapefiles and rasters produced by this model.  <b>If datasets already exist in this folder, they will be overwritten</b>."
                        },
                        {
                            "id" : "output_cell_size",
                            "type": "text",
                            "width": 70,
                            "validText": "[0-9]+",
                            "dataType": "float",
                            "args_id": "output_cell_size",
                            "label": "Output Cell Size (optional)",
                            "required": false,
                            "defaultValue": "",
                            "helpText": "The output cell size of the suitability masks.  If left blank will default to the smallest cell size of the input biophysical layers."
                        }
                    ]
                }
            ]
        },
        {
            "id": "biophysical_layers",
            "type": "multi",
            "args_id": "biophysical_layers",
            "label": "Biophysical Layer List",
            "sampleElement": {
               "id": "biophysical_uri",
                "type": "file",
                "label": "Biophysical Layer",
                "required": true,
                "validateAs": {"type": "GDAL"},
                "args_id": "biophysical_uri",
                "defaultValue": "",
                "helpText": "A raster that's a biophysical property."
            }
        },
        {
            "id": "model_suitabilityt_tables",
            "type": "multi",
            "args_id": "model_suitabilityt_tables",
            "label": "Model Suitability Tables",
            "sampleElement": {
               "id": "habitat_biophysical_suitability_table_uri",
                "type": "file",
                "label": "Habitat Biophysical Suitability Layer",
                "required": true,
                "validateAs": {"type": "CSV"},
                "args_id": "habitat_biophysical_suitability_table_uri",
                "defaultValue": "",
                "helpText": "A CSV that has habitat suitability curves on it."
            }
        }
    ]
}
