{
    "id" : "window",
    "label": "Wave Energy",
    "targetScript" : "./python/invest_core/wave_energy_biophysical.py",
    "modelName" : "wave_energy_biophysical",
    "localDocURI": "./documentation/wave_energy.html",
    "height": 600,
    "width" : 700,
    "elements": [
        {
            "id" : "workspace_list",
            "type": "list",
            "elements":[
                {
                    "id" : "workspace",
                    "args_id" : "workspace_dir",
                    "type": "folder",
                    "label": "Workspace",
                    "defaultValue": "./carbon",
                    "required": true
                },          
				{        
                    "id" : "wave_base_data",
                    "args_id" : "wave_base_data_uri",
                    "type": "folder",
                    "label": "Path to Folder with Wave Base Data",
                    "defaultValue": "./carbon",
                    "required": true
                },    
		        {
		            "id": "analysis_area",
		            "args_id": "analysis_area_uri",
		            "type": "dropdown",
		            "label": "Analysis Area",
		            "options": ["West Coast of North America and Hawaii",
		            			"East Coast of North America and Puerto Rico", 
		            			"Global (Eastern Hemisphere)", "Global (Western Hemisphere)"],
		            "required": true,
		            "defaultValue": "West Coast of North America and Hawaii"
		        },
        		{
                    "id" : "machine_perf_table",
                    "args_id": "machine_perf_uri",
                    "type": "file",
                    "label": "Machine Performance Table",
                    "defaultValue": "./carbon/input/carbon_pools_samp.dbf",
                    "required": true
                },
                {
                    "id" : "machine_param_table",
                    "args_id": "machine_param_uri",
                    "type": "file",
                    "label": "Machine Parameter Table",
                    "required": true,
                    "defaultValue": "./carbon/input/harv_samp_cur.shp"
                },
                {
                    "id" : "dem",
                    "args_id": "dem_uri",
                    "type": "file",
                    "label": "Global Digital Elevation Model (DEM)",
                    "defaultValue": "./carbon/input/harv_samp_fut.shp",
                    "required": true
                },
                {
                    "id" : "aoi",
                    "args_id": "aoi_uri",
                    "type": "file",
                    "label": "Area of Interest (AOI)",
                    "defaultValue": "./carbon/input/harv_samp_fut.shp",
                    "required": false
                }
            ]
        }
    ]
}
