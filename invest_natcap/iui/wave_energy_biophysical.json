{
    "id" : "window",
    "label": "Wave Energy Biophysical",
    "targetScript" : "../wave_energy/wave_energy_biophysical.py",
    "modelName" : "wave_energy_biophysical",
    "localDocURI": "./documentation/wave_energy.html",
    "height": 600,
    "width" : 700,
    "elements": [
        {
            "id" : "workspace_list",
            "type": "list",
            "elements":[
                {
                    "id" : "workspace",
                    "args_id" : "workspace_dir",
                    "type": "folder",
                    "label": "Workspace",
                    "defaultValue": "../../test/data/wave_energy_data/iui_test_space",
                    "required": true
                },          
				{        
                    "id" : "wave_base_data",
                    "args_id" : "wave_base_data_uri",
                    "type": "folder",
                    "label": "Path to Folder with Wave Base Data",
                    "defaultValue": "../../test/data/wave_energy_data/samp_input/WaveData",
                    "required": true
                },    
		        {
		            "id": "analysis_area",
		            "args_id": "analysis_area_uri",
		            "type": "dropdown",
		            "label": "Analysis Area",
		            "options": ["West Coast of North America and Hawaii",
		            			"East Coast of North America and Puerto Rico", 
		            			"Global (Eastern Hemisphere)", "Global (Western Hemisphere)"],
		            "defaultValue": "West Coast of North America and Hawaii",
		            "required": true
		        },
        		{
                    "id" : "machine_perf_table",
                    "args_id": "machine_perf_uri",
                    "type": "file",
                    "label": "Machine Performance Table",
                    "defaultValue": "../../test/data/wave_energy_data/samp_input/Machine_PelamisPerfCSV.csv",
                    "required": true,
                    "validateAs": {"type":"CSV"}
                },
                {
                    "id" : "machine_param_table",
                    "args_id": "machine_param_uri",
                    "type": "file",
                    "label": "Machine Parameter Table",
                    "required": true,
                    "defaultValue": "../../test/data/wave_energy_data/samp_input/Machine_PelamisParamCSV.csv",
                	"validateAs": { "type": "CSV",
                					"fieldsExist": ["NAME", "VALUE", "NOTE"],
                					"restrictions": [{"field": "NAME",
                									"validateAs":{"type": "string",
                									              "allowedValues": {"pattern":"capmax|hsmax|tpmax",
                									                                "flag":"ignoreCase"}
                									              }},
                									 {"field": "VALUE",
                									  "validateAs": {"type": "number",
                									                 "allowedValues":{"pattern":"[0-9]*\\.?[0-9]+$"}
                									                 }}]}
                },
                {
                    "id" : "dem",
                    "args_id": "dem_uri",
                    "type": "folder",
                    "label": "Global Digital Elevation Model (DEM)",
                    "defaultValue": "../../test/data/wave_energy_data/samp_input/global_dem",
                    "required": true,
                    "validateAs": {"type": "GDAL"}
                },
                {
                    "id" : "aoi",
                    "args_id": "aoi_uri",
                    "type": "file",
                    "label": "Area of Interest (AOI)(Optional)",
                    "defaultValue": "../../test/data/wave_energy_data/samp_input/AOI_WCVI.shp",
                    "required": false,
                    "validateAs": {"type": "OGR", 
                    			   "layers": [{"name": {"inheritFrom": "file"}, 
                    			               "type": "polygons", 
                    			               "projection" : "Transverse_Mercator",
                    			               "datum" : "WGS_1984"}]
                    			   }
                 }
            ]
        }
    ]
}